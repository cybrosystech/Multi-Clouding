<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_label_sheet_custom" model="report.paperformat">
            <field name="name">Custom Label Sheet</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">57</field>
            <field name="page_width">32</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">0</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">0</field>
            <field name="margin_right">0</field>
            <field name="disable_shrinking" eval="True"/>
            <field name="dpi">96</field>
        </record>

        <record id="report_product_template_label_custom" model="ir.actions.report">
            <field name="name">Product Label (PDF)</field>
            <field name="model">product.template</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">analytic_account_types.report_label_custom</field>
            <field name="report_file">analytic_account_types.report_label_custom</field>
            <field name="paperformat_id" ref="analytic_account_types.paperformat_label_sheet_custom"/>
            <field name="print_report_name">'Products Labels - %s' % (object.name)</field>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>
