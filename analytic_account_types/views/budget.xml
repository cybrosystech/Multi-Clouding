<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_crossovered_budget_view_form"
                model="ir.ui.view">
            <field name="name">view_inherit_crossovered_budget_view_form</field>
            <field name="model">crossovered.budget</field>
            <field name="inherit_id"
                   ref="account_budget.crossovered_budget_view_form"/>
            <field name="arch" type="xml">

                <!-- position: after|before|replace|attributes|inside -->
                <xpath expr="//notebook/page/field/tree/field[@name='analytic_account_id']"
                       position="replace">
                    <field name="analytic_account_id"
                           domain="[('analytic_account_type','=','cost_center')]"/>

                </xpath>
                <xpath expr="//notebook/page/field/tree/field[@name='analytic_account_id']"
                       position="after">
                    <field name="project_site_id"/>
                    <field name="type_id"/>
                    <field name="location_id"/>
                </xpath>
                <xpath expr="//notebook/page/field/tree/field[@name='percentage']"
                       position="after">
                    <field name="remaining_amount"/>
                    <field name="actual_percentage"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>