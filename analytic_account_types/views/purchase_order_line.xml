<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_purchase_order_form" model="ir.ui.view">
            <field name="name">view_inherit_purchase_order_form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_confirm'][1]" position="attributes">
                    <attribute name="invisible"> state != 'draft' or show_button_confirm == False</attribute>
                </xpath>
                <xpath expr="//button[@name='button_confirm'][2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                 <xpath expr="//button[@name='button_cancel']" position="attributes">
                    <attribute name="invisible">state not in ['draft','to_approve','to approve','sent','purchase']</attribute>
                </xpath>
                <xpath expr="//button[@name='button_confirm']" position="after">
                    <field name="is_admin" invisible="1"/>
                    <field name="show_approve_button" invisible="1"/>
                    <field name="show_request_approve_button" invisible="1"/>
                    <field name="show_button_confirm" invisible="1"/>
                    <button name="request_approval_button" string="Request Approval" type="object" class="btn-primary"
                    invisible="show_request_approve_button == True or state not in ['draft']"/>
                    <button name="button_approve_purchase_cycle" string="Approve" type="object" class="btn-primary"
                    invisible="show_approve_button == False"/>
                </xpath>

                <!-- position: after|before|replace|attributes|inside -->
                <xpath expr="//notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='analytic_distribution']" position="replace">
                    <field name="analytic_distribution" widget="analytic_distribution"
                           groups="analytic.group_analytic_accounting"
                           required="1"
                           options="{'product_field': 'product_id', 'business_domain': 'purchase_order', 'amount_field': 'price_subtotal'}"/>
                </xpath>
                <xpath expr="//notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='product_uom'][2]" position="replace">
                    <field name="product_uom" string="UoM" groups="uom.group_uom"
                                        readonly="state in ('purchase', 'done', 'cancel')"
                                        required="not display_type"
                                        options="{'no_open': True}"
                                        force_save="1" />
                </xpath>
                <xpath expr="//notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='product_packaging_qty']"
                       position="replace">
                    <field name="product_packaging_qty"
                           invisible="not product_id or not product_packaging_id"
                           groups="product.group_stock_packaging"
                           />
                </xpath>

                <xpath expr="//notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='taxes_id']"
                       position="replace">
                    <field name="taxes_id" widget="many2many_tags"
                           domain="[('type_tax_use', '=', 'purchase'), ('company_id', 'parent_of', parent.company_id), ('country_id', '=', parent.tax_country_id), ('active', '=', True)]"
                           context="{'default_type_tax_use': 'purchase', 'search_view_ref': 'account.account_tax_view_search'}"
                           options="{'no_create': True}"/>

                </xpath>

                <xpath expr="//notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='analytic_distribution']" position="before">
                    <field name="cost_center_id" readonly="state not in ['draft','to_approve','sent']"  invisible="parent.is_admin == True"  column_invisible="parent.is_admin == True" options="{'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="project_site_id" readonly="state not in ['draft','to_approve','sent']"  required="1" invisible="parent.is_admin == True"  column_invisible="parent.is_admin == True" options="{'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="business_unit_id" readonly="state not in ['draft','to_approve','sent']"  invisible="parent.is_admin == True"  column_invisible="parent.is_admin == True" options="{'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="cost_center_id" readonly="state not in ['draft','to_approve','sent']"  invisible="parent.is_admin == False"  column_invisible="parent.is_admin == False"/>
                    <field name="project_site_id" readonly="state not in ['draft','to_approve','sent']"  required="1" invisible="parent.is_admin == False"  column_invisible="parent.is_admin == False"/>
                    <field name="business_unit_id" readonly="state not in ['draft','to_approve','sent']"  invisible="parent.is_admin == False"  column_invisible="parent.is_admin == False"/>
                </xpath>
                <xpath expr="//notebook/page[@name='products']/field[@name='order_line']/tree/field[@name='analytic_distribution']" position="after">
                    <field name="type_id" column_invisible="1" invisible="1"/>
                    <field name="location_id" invisible="1" column_invisible="1"/>
                    <field name="budget_id" optional="show" readonly="state not in ['draft']"/>
                    <field name="budget_line_id" optional="show" readonly="state not in ['draft']"/>
                    <field name="remaining_amount" optional="show" readonly="1"/>
                    <field name="local_subtotal" optional="hide" readonly="1" />
                    <field name="t_budget" optional="hide"/>
                    <field name="site_status" optional="hide"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Out Budget Amounts" name="budget_amounts">
                        <div>
                            <field name="budget_collect_ids">
                                <tree editable="bottom">
                                    <field name="budget_id"/>
                                    <field name="remaining_amount"/>
                                    <field name="demand_amount"/>
                                    <field name="difference_amount"/>
                                </tree>
                            </field>
                        </div>
                    </page>
                     <page string="Approval Cycle" name="approval_cycle">
                        <div>
                            <field name="purchase_approval_cycle_ids" readonly="True">
                                <tree>
                                    <field name="approval_seq"/>
                                    <field name="user_approve_ids" widget="many2many_tags"/>
                                    <field name="is_approved"/>
                                </tree>
                            </field>
                        </div>
                    </page>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
