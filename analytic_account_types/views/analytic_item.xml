                    <field name="business_unit_id" invisible="1" column_invisible="1"/>
                    <field name="type_id" invisible="1" column_invisible="1"/>
                    <field name="location_id" invisible="1" column_invisible="1"/>
                </xpath>
            </field>
        </record>

