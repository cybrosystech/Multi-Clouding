<odoo>
    <data>
        <record id="view_in_out_budget_sales_form" model="ir.ui.view">
            <field name="name">view_in_out_budget_form_sales</field>
            <field name="model">budget.in.out.check.sales</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="type"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <group>
                            <div>
                                <field name="budget_line_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="from_amount"/>
                                        <field name="to_amount"/>
                                        <field name="approval_seq"/>
                                        <field name="user_ids" widget="many2many_tags"/>
                                    </tree>
                                </field>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_in_out_budget_tree_sales" model="ir.ui.view">
            <field name="name">view_in_out_budget_tree_sales</field>
            <field name="model">budget.in.out.check.sales</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="type"/>
                </tree>
            </field>
        </record>

        <record id="action_in_out_budget_view_sales" model="ir.actions.act_window">
            <field name="name">Budget Check Sales</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">budget.in.out.check.sales</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">

                </p>
                <p>

                </p>
            </field>
        </record>

        <menuitem id="menu_in_out_budget_view_sales" name="Budget Check Sales" parent="sale.menu_sale_config"
                  action="action_in_out_budget_view_sales" sequence="100"/>
    </data>
</odoo>