<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="email_template_send_mail_approval_sales" model="mail.template">
            <field name="name">Multi Level Sales Approval Mail Template</field>
            <field name="email_from"></field>
            <field name="subject">Sales Order Approval</field>
            <field name="email_to"></field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">{{object.partner_id.lang}}</field>
            <field name="body_html" type="html">
                <meta itemprop="name" content="Notification Email"/>
                <table width="100%" cellpadding="0" cellspacing="0">
                    <tr>
                        <td class="content-block">
                            <h3 style="margin: 0;">Pending approval</h3>
                        </td>
                    </tr>
                    <tr>
                        <td class="content-block">
                            Hello  <t t-esc="ctx.get('name', '')"> </t>,
                        </td>
                    </tr>
                    <tr>
                        <td class="content-block">
                            <t t-out="object.display_name"/>  requires your approval.
                            Please follow the link below to open the item.
                        </td>
                    </tr>
                    <tr>
                        <td class="content-block" itemprop="handler" itemtype="http://schema.org/HttpActionHandler">
                            <a t-attf-href="/web?#id={{ object.id }}&amp;view_type=form&amp;model=sale.order&amp;action=" class="btn-basic" itemprop="url">Open</a>
                        </td>
                    </tr>
                </table>
            </field>
        </record>

