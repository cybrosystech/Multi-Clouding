<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_inherit_view_order_form" model="ir.ui.view">
            <field name="name">view_inherit_view_order_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_confirm'][1]" position="attributes">
                    <attribute name="invisible">state != 'draft' or show_button_confirm == False</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="invisible">state not in ['draft','to_approve','sent','sale'] or id == False</attribute>

                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="after">
                    <field name="is_admin" invisible="1"/>
                    <field name="show_approve_button" invisible="1"/>
                    <field name="show_request_approve_button" invisible="1"/>
                    <field name="show_button_confirm" invisible="1"/>
                    <button name="request_approval_button" string="Request Approval" type="object" class="btn-primary"
                    invisible="show_request_approve_button == True or state not in ['draft']"/>
                    <button name="button_approve_sales_cycle" string="Approve" type="object" class="btn-primary"
                    invisible="show_approve_button == False"/>
                </xpath>


                <!-- position: after|before|replace|attributes|inside -->
                 <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='analytic_distribution']" position="before">
                       <field name="cost_center_id" required="1" readonly="state not in ['draft']" optional="show" invisible="parent.is_admin == True"  column_invisible="parent.is_admin == True" options="{'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="project_site_id"  readonly="state not in ['draft']" optional="show" required="1" invisible="parent.is_admin == True"  column_invisible="parent.is_admin == True" options="{'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="business_unit_id"  readonly="state not in ['draft']" optional="show" invisible="parent.is_admin == True"  column_invisible="parent.is_admin == True" options="{'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="cost_center_id" readonly="state not in ['draft']" optional="show" invisible="parent.is_admin == False"  column_invisible="parent.is_admin == False"/>
                    <field name="project_site_id"  readonly="state not in ['draft']" optional="show" required="1" invisible="parent.is_admin == False"  column_invisible="parent.is_admin == False"/>
                   <field name="business_unit_id"  readonly="state not in ['draft']" optional="show" invisible="parent.is_admin == False"  column_invisible="parent.is_admin == False"/>
                      <field name="type_id" invisible="1" column_invisible="1"/>
                     <field name="location_id" invisible="1" column_invisible="1"/>
                 </xpath>
                <xpath expr="//notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="budget_id" optional="hide" readonly="state not in ['draft']"/>
                    <field name="budget_line_id" optional="hide"
                           readonly="state not in ['draft']"/>
                    <field name="remaining_amount" optional="hide" readonly="1" />
                    <field name="local_subtotal" readonly="1"  optional="hide"/>
                    <field name="t_budget" />
                    <field name="t_budget_name" />
                    <field name="site_status"/>
                </xpath>

                <!-- position: after|before|replace|attributes|inside -->
                <xpath expr="//notebook" position="inside">
                    <page string="Out Budget Amounts" name="budget_amounts">
                        <div>
                            <field name="budget_collect_ids">
                                <tree editable="bottom">
                                    <field name="budget_id"/>
                                    <field name="remaining_amount"/>
                                    <field name="demand_amount"/>
                                    <field name="difference_amount"/>
                                </tree>
                            </field>
                        </div>
                    </page>
                    <page string="Approval Cycle" name="approval_cycle">
                        <div>
                            <field name="sale_approval_cycle_ids" readonly="True">
                                <tree editable="bottom">
                                    <field name="approval_seq"/>
                                    <field name="user_approve_ids" widget="many2many_tags"/>
                                    <field name="is_approved"/>
                                </tree>
                            </field>
                        </div>
                    </page>
                </xpath>

            </field>
        </record>
    </data>
</odoo>