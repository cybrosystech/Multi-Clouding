<odoo>
    <data>
<!--         Inherit Form View to Modify it -->
        <record id="view_inherit_view_move_form" model="ir.ui.view">
            <field name="name">view_inherit_view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//div[@name='journal_div']" position="replace">
                        <div name="journal_div"
                                     class="d-flex"
                                     groups="account.group_account_readonly"
                                     >
                                    <field name="journal_id"
                                        options="{'no_create': True, 'no_open': True}"
                                        readonly="posted_before"/>
                                    <span class="oe_inline o_form_label mx-3"
                                          groups="base.group_multi_currency"
                                          invisible="move_type == 'entry'"> in </span>
                                    <field name="currency_id"
                                           readonly="state != 'draft'"
                                           options="{'no_create': True}"
                                           context="{'search_default_active': 1, 'search_default_inactive': 1}"/>
                                </div>

                 </xpath>
                <xpath expr="//field[@name='invoice_date']"
                       position="attributes">
                    <attribute name="required">move_type in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt','in_receipt')</attribute>
                    <attribute name="invisible">move_type not in ('out_invoice','out_refund', 'in_invoice', 'in_refund', 'out_receipt','in_receipt')</attribute>
                    <attribute name="nolabel">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_post'][1]"
                       position="attributes">
                    <attribute name="invisible">show_request_approve_button == False or show_confirm_button == False or state != 'draft'</attribute>
                </xpath>
                <xpath expr="//button[@name='action_post'][2]"
                       position="attributes">
                    <attribute name="invisible">show_request_approve_button == False or show_post_button == False or state != 'draft'</attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel'][1]"
                       position="attributes">
                    <attribute name="invisible">not id or state not in ['draft','to_approve'] or move_type != 'entry'</attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel'][2]"
                       position="attributes">
                    <attribute name="invisible">not id or state not in ['draft','to_approve'] or move_type == 'entry'</attribute>
                </xpath>
                <xpath expr="//button[@name='action_post']" position="after">
                    <field name="is_admin" invisible="1"/>
                    <field name="show_approve_button" invisible="1"/>
                    <field name="show_request_approve_button" invisible="1"/>
                    <field name="is_from_purchase" invisible="1"/>
                    <field name="is_from_sales" invisible="1"/>
                    <field name="show_confirm_button" invisible="1"/>
                    <field name="show_post_button" invisible="1"/>
                    <button name="action_post" string="Confirm"
                            class="oe_highlight"
                            type="object" groups="account.group_account_invoice"
                            invisible="is_from_purchase == False or state != 'draft' "
                    />
                    <button name="action_post" string="Confirm"
                            class="oe_highlight"
                            type="object" groups="account.group_account_invoice"
                            invisible="is_from_sales == False or state != 'draft'"
                    />
                    <button name="request_approval_button"
                            string="Request Approval" type="object"
                            class="btn-primary"
                            invisible="show_request_approve_button == True or is_from_purchase == True or is_from_sales == True or state not in ['draft']"
                    />
                    <button name="button_approve_purchase_cycle"
                            string="Approve" type="object" class="btn-primary"
                            invisible="show_approve_button == False or state=='draft' or state == 'cancel'"
                    />
                </xpath>

                <xpath expr="//sheet/group/group[@id='header_right_group']/div[@name='journal_div']"
                       position="after">
                    <field name="company_id" groups="base.group_multi_company"/>
                </xpath>
                <xpath expr="//notebook/page[@id='other_tab']/group[@id='other_tab_group']/group[@name='accounting_info_group']/field[@name='company_id']"
                       position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

<!--                &lt;!&ndash; position: after|before|replace|attributes|inside &ndash;&gt;-->
                <xpath expr="//notebook/page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='analytic_distribution']"
                       position="before">
                    <field name="analytic_account_id" optional="show" readonly="parent_state == 'posted'"
                            options="{'no_quick_create': True, 'no_create_edit': True}"  invisible="parent.is_admin == True" column_invisible="parent.is_admin == True"/>
                    <field name="project_site_id" optional="show" required="1" readonly="parent_state == 'posted'"
                            options="{'no_quick_create': True, 'no_create_edit': True}"  invisible="parent.is_admin == True" column_invisible="parent.is_admin == True"/>
                    <field name="analytic_account_id" optional="show" readonly="parent_state == 'posted'"
                            invisible="parent.is_admin == False" column_invisible="parent.is_admin == False"/>
                    <field name="project_site_id" optional="show" required="1" readonly="parent_state == 'posted'"
                            invisible="parent.is_admin == False" column_invisible="parent.is_admin == False" />

                </xpath>
                <xpath expr="//notebook/page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                       position="replace">
                    <field name="product_id"
                           optional="show"
                           widget="many2one_barcode"
                           domain="
                                    context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')
                                    and [('sale_ok', '=', True)]
                                    or [('purchase_ok', '=', True)]"
                           invisible="parent.is_admin == False"
                           column_invisible="parent.is_admin == False"

                           />
                    <field name="product_id"
                           optional="show"
                           options="{'no_quick_create': True, 'no_create_edit': True}"
                           widget="many2one_barcode"
                           domain="
                                    context.get('default_move_type') in ('out_invoice', 'out_refund', 'out_receipt')
                                    and [('sale_ok', '=', True)]
                                    or [('purchase_ok', '=', True)]"
                           invisible="parent.is_admin == True"
                           column_invisible="parent.is_admin == True"

                           />
                </xpath>

                <xpath expr="//notebook/page[@name='invoice_tab']/field[@name='invoice_line_ids']/tree/field[@name='analytic_distribution']"
                       position="after">
                    <field name="parent_state" invisible="1"
                           column_invisible="1"/>
                    <field name="budget_id" optional="show"
                           attrs="{'readonly': [('parent_state', '=', 'posted')]}"/>
                    <field name="budget_line_id" optional="show"
                           attrs="{'readonly': [('parent_state', '=', 'posted')]}"/>
                    <field name="remaining_amount" optional="show"
                           readonly="1"/>
                    <field name="local_subtotal" optional="hide"
                           readonly="1"/> <!-- attrs="{'readonly': [('parent_state', '=', 'posted')]}" -->
                </xpath>

                <!-- position: after|before|replace|attributes|inside -->
                <xpath expr="//notebook/page[@name='aml_tab']/field[@name='line_ids']/tree/field[@name='analytic_distribution']"
                       position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//notebook/page[@name='aml_tab']/field[@name='line_ids']/tree/field[@name='analytic_distribution']"
                       position="before">
                    <field name="analytic_account_id" optional="show" invisible="parent.is_admin == True"  column_invisible="parent.is_admin == True" options="{'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="project_site_id" optional="show" required="1" invisible="parent.is_admin == True"  column_invisible="parent.is_admin == True" options="{'no_quick_create': True, 'no_create_edit': True}" />
                    <field name="analytic_account_id" optional="show" invisible="parent.is_admin == False"  column_invisible="parent.is_admin == False"/>
                    <field name="project_site_id" optional="show" required="1" invisible="parent.is_admin == False"  column_invisible="parent.is_admin == False"/>
                </xpath>
                <xpath expr="//notebook/page[@name='aml_tab']/field[@name='line_ids']/tree/field[@name='analytic_distribution']"
                       position="after">
                    <field name="budget_id" optional="hide"/>
                    <field name="budget_line_id" optional="hide"/>
                    <field name="remaining_amount" optional="show"
                           readonly="1"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Out Budget Amounts" name="budget_amounts">
                        <div>
                            <field name="budget_collect_ids" readonly="True">
                                <tree editable="bottom">
                                    <field name="budget_id"/>
                                    <field name="remaining_amount"
                                           readonly="1"/>
                                    <field name="demand_amount"/>
                                    <field name="difference_amount"/>
                                </tree>
                            </field>
                        </div>
                    </page>
                    <page string="Approval Cycle" name="approval_cycle">
                        <div>
                            <field name="purchase_approval_cycle_ids"
                                   readonly="True">
                                <tree editable="bottom">
                                    <field name="approval_seq"/>
                                    <field name="user_approve_ids"
                                           widget="many2many_tags"/>
                                    <field name="is_approved"/>
                                </tree>
                            </field>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>

         <record id="view_move_line_tree" model="ir.ui.view">
            <field name="name">account.move.line.inherit.analytic.account.types</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
             <field name="arch" type="xml">
                 <field name="analytic_distribution" position="before">
                     <field name="analytic_account_id" invisible="move_id.is_admin == True" options="{'no_quick_create': True, 'no_create_edit': True}" />
                     <field name="project_site_id"  invisible="move_id.is_admin == True" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                      <field name="analytic_account_id"  invisible="move_id.is_admin == False"/>
                     <field name="project_site_id"  invisible="move_id.is_admin == False" />
                 </field>
             </field>
         </record>
    </data>
</odoo>
