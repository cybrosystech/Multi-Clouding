<odoo>
    <data>
<!--         Inherit Form View to Modify it -->
        <record id="view_inherit_view_move_form" model="ir.ui.view">
            <field name="name">view_inherit_view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']"
                       position="attributes">
                    <attribute name="required">move_type in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt','in_receipt')</attribute>
                    <attribute name="invisible">move_type not in ('out_invoice','out_refund', 'in_invoice', 'in_refund', 'out_receipt','in_receipt')</attribute>
                    <attribute name="nolabel">1</attribute>
                </xpath>
                <xpath expr="//button[@name='action_post'][1]"
                       position="attributes">
                    <attribute name="invisible">show_request_approve_button == False or show_confirm_button == False or state != 'draft'</attribute>
                </xpath>
                <xpath expr="//button[@name='action_post'][2]"
                       position="attributes">
                    <attribute name="invisible">show_request_approve_button == False or show_post_button == False or state != 'draft'</attribute>
                </xpath>
                <xpath expr="//button[@name='button_cancel']"
                       position="attributes">
                    <attribute name="invisible">id == False or state not in ['draft','to_approve']</attribute>
                </xpath>
                <xpath expr="//button[@name='action_post']" position="after">
                    <field name="show_approve_button" invisible="1"/>
                    <field name="show_request_approve_button" invisible="1"/>
                    <field name="is_from_purchase" invisible="1"/>
                    <field name="is_from_sales" invisible="1"/>
                    <field name="show_confirm_button" invisible="1"/>
                    <field name="show_post_button" invisible="1"/>
                    <button name="action_post" string="Confirm"
                            class="oe_highlight"
                            type="object" groups="account.group_account_invoice"
                            invisible="is_from_purchase == False or state != 'draft' "
                    />
                    <button name="action_post" string="Confirm"
                            class="oe_highlight"
                            type="object" groups="account.group_account_invoice"
                            invisible="is_from_sales == False or state != 'draft'"
                    />
                    <button name="request_approval_button"
                            string="Request Approval" type="object"
                            class="btn-primary"
                            invisible="show_request_approve_button == True or is_from_purchase == True or is_from_sales == True or state not in ['draft']"
                    />
                    <button name="button_approve_purchase_cycle"
                            string="Approve" type="object" class="btn-primary"
                            invisible="show_approve_button == False"
                    />
                </xpath>

                <xpath expr="//sheet/group/group[@id='header_right_group']/div[@name='journal_div']"
                       position="after">
                    <field name="company_id" groups="base.group_multi_company"/>
                </xpath>
                <xpath expr="//notebook/page[@id='other_tab']/group[@id='other_tab_group']/group[@name='accounting_info_group']/field[@name='company_id']"
                       position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- position: after|before|replace|attributes|inside -->
                <xpath expr="//notebook/page/field/tree/field[@name='analytic_distribution']"
                       position="before">
                    <field name="analytic_account_id" optional="show"
                           attrs="{'readonly': [('parent_state', '=', 'posted')]}"/>
                    <field name="project_site_id" optional="show" required="1"
                           attrs="{'readonly': [('parent_state', '=', 'posted')]}"/>

                </xpath>

                <xpath expr="//notebook/page/field/tree/field[@name='analytic_distribution']"
                       position="after">
                    <field name="parent_state" invisible="1"
                           column_invisible="1"/>
                    <field name="budget_id" optional="show"
                           attrs="{'readonly': [('parent_state', '=', 'posted')]}"/>
                    <field name="budget_line_id" optional="show"
                           attrs="{'readonly': [('parent_state', '=', 'posted')]}"/>
                    <field name="remaining_amount" optional="show"
                           readonly="1"/>
                    <field name="local_subtotal" optional="hide"
                           readonly="1"/> <!-- attrs="{'readonly': [('parent_state', '=', 'posted')]}" -->
                </xpath>

                <!-- position: after|before|replace|attributes|inside -->
                <xpath expr="//notebook/page[2]/field[@name='line_ids']/tree/field[@name='analytic_distribution']"
                       position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//notebook/page[2]/field[@name='line_ids']/tree/field[@name='analytic_distribution']"
                       position="before">
                    <field name="analytic_account_id" optional="show"/>
                    <field name="project_site_id" optional="show" required="1"/>
                </xpath>
                <xpath expr="//notebook/page[2]/field[@name='line_ids']/tree/field[@name='analytic_distribution']"
                       position="after">
                    <field name="budget_id" optional="hide"/>
                    <field name="budget_line_id" optional="hide"/>
                    <field name="remaining_amount" optional="show"
                           readonly="1"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Out Budget Amounts" name="budget_amounts">
                        <div>
                            <field name="budget_collect_ids" readonly="True">
                                <tree editable="bottom">
                                    <field name="budget_id"/>
                                    <field name="remaining_amount"
                                           readonly="1"/>
                                    <field name="demand_amount"/>
                                    <field name="difference_amount"/>
                                </tree>
                            </field>
                        </div>
                    </page>
                    <page string="Approval Cycle" name="approval_cycle">
                        <div>
                            <field name="purchase_approval_cycle_ids"
                                   readonly="True">
                                <tree editable="bottom">
                                    <field name="approval_seq"/>
                                    <field name="user_approve_ids"
                                           widget="many2many_tags"/>
                                    <field name="is_approved"/>
                                </tree>
                            </field>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
