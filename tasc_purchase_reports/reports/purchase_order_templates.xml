                            <t t-esc="o.dest_address_id.state_id.name"/>
                        </t>
                        <span>, </span>
                        <t t-if="o.dest_address_id.zip">
                            <span>PO Box</span>
                            <t t-esc="o.dest_address_id.zip"/>
                        </t>

                        <br/>
                        <t t-if="o.dest_address_id.country_id.name">

                            <t t-esc="o.dest_address_id.country_id.name"/>
                            <br/>
                        </t>
                        <t t-if="o.dest_address_id.phone">

                            <t t-esc="o.dest_address_id.phone"/>
                            <br/>
                        </t>
                        <t t-if="o.dest_address_id.vat">
                             <span>TRN : </span><t t-esc="o.dest_address_id.vat"/>
                        </t>
                    </div>
                </t>
            </t>
            <t t-else="">
                <t t-set="information_block">
                    <strong>Shipping address:</strong>
                    <div class="o_address_format"
                         name="purchase_shipping_address">
                        <t t-if="o.picking_type_id.warehouse_id.partner_id.name">
                            <t t-esc="o.picking_type_id.warehouse_id.partner_id.name"/>
                            <br/>
                        </t>
                        <t t-if="o.picking_type_id.warehouse_id.partner_id.street">
                            <t t-esc="o.picking_type_id.warehouse_id.partner_id.street"/>
                            <br/>
                        </t>
                        <t t-if="o.picking_type_id.warehouse_id.partner_id.street2">

                            <t t-esc="o.picking_type_id.warehouse_id.partner_id.street2"/>
                            <br/>
                        </t>
                        <t t-if="o.picking_type_id.warehouse_id.partner_id.city">

                            <t t-esc="o.picking_type_id.warehouse_id.partner_id.city"/>
                        </t>
                        <t t-if="o.picking_type_id.warehouse_id.partner_id.state_id.name">

                            <t t-esc="o.picking_type_id.warehouse_id.partner_id.state_id.name"/>
                        </t>
                        <span>, </span>
                        <t t-if="o.picking_type_id.warehouse_id.partner_id.zip">
                            <span>PO Box</span>
                            <t t-esc="o.picking_type_id.warehouse_id.partner_id.zip"/>
                        </t>

                        <br/>
                        <t t-if="o.picking_type_id.warehouse_id.partner_id.country_id.name">

                            <t t-esc="o.picking_type_id.warehouse_id.partner_id.country_id.name"/>
                            <br/>
                        </t>
                        <t t-if="o.picking_type_id.warehouse_id.partner_id.phone">

                            <t t-esc="o.picking_type_id.warehouse_id.partner_id.phone"/>
                            <br/>
                        </t>
                        <t t-if="o.picking_type_id.warehouse_id.partner_id.vat">
                             <span>TRN : </span><t t-esc="o.picking_type_id.warehouse_id.partner_id.vat"/>
                        </t>
                    </div>
                </t>
            </t>
            <div class="page">
                <div class="oe_structure"/>

                <div class="mt-4">
                    <h2 t-if="o.state in ['draft', 'sent', 'to approve']">
                        Request for Quotation #
                        <span t-field="o.name"/>
                    </h2>
                    <h2 t-if="o.state in ['purchase', 'done']">Purchase Order #
                        <span t-field="o.name"/>
                    </h2>
                    <h2 t-if="o.state == 'cancel'">Cancelled Purchase Order #
                        <span t-field="o.name"/>
                    </h2>
                </div>

                <div id="informations" class="row mt-4 mb32">
                    <div t-if="o.user_id" class="col-3 bm-2">
                        <strong>Purchase Representative:</strong>
                        <p t-field="o.user_id" class="m-0"/>
                    </div>
                    <div t-if="o.partner_ref" class="col-3 bm-2">
                        <strong>Your Order Reference:</strong>
                        <p t-field="o.partner_ref" class="m-0"/>
                    </div>
                    <div t-if="o.state in ['purchase','done'] and o.date_approve"
                         class="col-3 bm-2">
                        <strong>Order Date:</strong>
                        <t t-if=" o.date_approve">
                            <p t-esc="o.date_approve.strftime('%d/%m/%Y')" class="m-0"/>
                        </t>
                    </div>
                    <div t-elif="o.date_order" class="col-3 bm-2">
                        <strong>Order Deadline:</strong>
                           <p t-esc="o.date_order.strftime('%d/%m/%Y')" class="m-0"/>

                    </div>
                    <div t-if="o.supplier_representative" class="col-3 bm-2">
                        <strong>Supplier Representative:</strong>
                        <p t-field="o.supplier_representative" class="m-0"/>
                    </div>

                </div>
                <t t-set="discount" t-value="0"/>
                <table class="table table-sm o_main_table table-borderless mt-4">
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_description">
                                <strong>Description</strong>
                            </th>
                            <th name="th_taxes">
                                <strong>Taxes</strong>
                            </th>
                            <th name="th_date_req" class="text-center">
                                <strong>Date Req.</strong>
                            </th>
                            <th name="th_quantity" class="text-end">
                                <strong>Qty</strong>
                            </th>
                            <th name="th_price_unit" class="text-end">
                                <strong>Unit Price</strong>
                            </th>
                            <th name="th_subtotal" class="text-end">
                                <strong>Amount (<t t-esc="o.currency_id.name"/>)
                                </strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-foreach="o.order_line" t-as="line">
                          <t t-set="discount" t-value="discount+((line.discount/100)*(line.price_unit*line.product_qty))"/>

                            <t t-set="current_subtotal"
                               t-value="current_subtotal + line.price_subtotal"/>

                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td id="product">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="taxes"
                                       t-value="', '.join([(tax.invoice_label or tax.name) for tax in line.taxes_id])"/>
                                    <td name="td_taxes"
                                        t-attf-class="text-end {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">
                                        <span t-out="taxes">Tax 15%</span>
                                    </td>
                                    <td class="text-center">
                                      <span t-esc="line.date_planned.strftime('%d/%m/%Y')" />
                                    </td>
                                    <td class="text-end">
                                        <span t-field="line.product_qty"/>
                                        <span t-field="line.product_uom.name"
                                              groups="uom.group_uom"/>
                                        <span t-if="line.product_packaging_id">
                                            (
                                            <span t-field="line.product_packaging_qty"
                                                  t-options='{"widget": "integer"}'/>
                                            <span t-field="line.product_packaging_id"/>
                                            )
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <span t-esc="'{:,}'.format(round(line.price_unit, o.currency_id.decimal_places))"/>

                                    </td>
                                    <td class="text-end">
                                    <t t-esc="'{:,}'.format(round(line.price_subtotal, o.currency_id.decimal_places))"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99" id="section">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99" id="note">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                            <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-end">
                                    <td colspan="99" id="subtotal">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                </table>

                <div id="total" class="row justify-content-end">
                    <div class="col-4">
                        <table class="table table-sm table-borderless">
                            <t t-set="tax_totals" t-value="o.tax_totals"/>
                            <t t-call="tasc_purchase_reports.document_tax_totals_template"/>
                        </table>
                    </div>
                </div>

                <br/>
                <br/>
                <div>
                    <t t-if="o.payment_term_id">
                        <div class="row">
                            <span style="font-weight:bold;">Payment Terms:
                            </span>
                            <t t-esc="o.payment_term_id.name"/>
                        </div>
                        <br/>
                        <div class="row">
                            <t t-set="index" t-value="1"/>
                            <t t-foreach="o.payment_term_id.line_ids"
                               t-as="term">
                                <t t-if="term.value == 'percent'">
                                    <t t-esc="index"/>
                                    <span># Installment of</span>
                                    <t t-set="amt"
                                       t-value="o.amount_total * (term.value_amount / 100)"/>
                                        <t t-esc="'{:,}'.format(round(amt, o.currency_id.decimal_places))"/>
                                    <span>(
                                        <span
                                                t-out="o.currency_id.with_context(lang='en_US').amount_to_text(amt)"/>
                                        )
                                    </span>
                                </t>
                                <t t-else="">
                                    <t t-esc="index"/>
                                    <span># Installment of</span>
                                    <t t-set="amt"
                                       t-value="term.value_amount"/>
                                      <t t-esc="'{:,}'.format(round(amt, o.currency_id.decimal_places))"/>

                                    <span>(
                                        <span
                                                t-out="o.currency_id.with_context(lang='en_US').amount_to_text(amt)"/>
                                        )
                                    </span>
                                </t>
                                <t t-set="index" t-value="index+1"/>
                                <br/>
                            </t>
                        </div>
                    </t>
                </div>
                <br/>
                <br/>
                <span style="font-weight:bold;">Delivery Date :</span>
                <span t-esc="o.date_planned.strftime('%d/%m/%Y')" />
                <br/>
                <br/>
                <span style="font-weight:bold;">Notes:</span>
                <t t-esc="o.notes" class="mt-4"/>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>

    <template id="report_tasc_purchaseorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="tasc_purchase_reports.report_tasc_purchaseorder_document"
                   t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
