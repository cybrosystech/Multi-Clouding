        <t t-elif="company.external_report_layout_id.key == 'web.external_layout_bold'">
            <t t-call="tasc_purchase_reports.external_layout_bold">
                <t t-out="0"/>
            </t>

        </t>
        <t t-if="company.external_report_layout_id.key == 'web.external_layout_striped'">
            <t t-call="tasc_purchase_reports.external_layout_striped">
                <t t-out="0"/>
