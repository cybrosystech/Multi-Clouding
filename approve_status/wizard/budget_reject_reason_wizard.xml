<odoo>
        <record id="view_budget_rejection_form" model="ir.ui.view">
        <field name="name">view.budget.rejection.form</field>
        <field name="model">budget.rejection.wizard</field>
        <field name="arch" type="xml">
            <form string="Rejection Wizard">
                <group>
                    <field name="reason"/>
                </group>
                <footer>
                    <button name="action_rejection_send" string="Send" type="object"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>