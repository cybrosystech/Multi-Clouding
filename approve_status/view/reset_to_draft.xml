<odoo>
    <record id="view_reset_button_form" model="ir.ui.view">
        <field name="name">account.view.reset.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_draft']" position="attributes">
                <attribute name="attrs">{'invisible':[('state','=', 'posted')]}</attribute>
            </xpath>
            <field name="ref" position="after">
                <field name="reverse_boolean" invisible="1"/>
            </field>
            <xpath expr="//button[@name='%(account.action_view_account_move_reversal)d']"
                   position="attributes">
                <attribute name="attrs">{'invisible':[('reverse_boolean','=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>