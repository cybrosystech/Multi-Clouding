<odoo>
    <data>
        <record id="email_template_budget_check_rejection" model="mail.template">
            <field name="name">Rejected: Send by email</field>
            <field name="model_id" ref="approve_status.model_account_move"/>
            <field name="partner_to">{{object.create_uid.partner_id.id}}</field>
            <field name="subject">Rejection (Ref {{object.name or 'n/a'}})</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear
                        <t t-out="object.create_uid.partner_id.name or ''"></t>,
                        <br/>
                        <br/>
                        Your
                        <strong><t t-out="object.name or ''"></t> </strong>
                        has been rejected due to the
                        <br/>
                        <p>
                            <t t-esc="ctx.get('reason', '')"> </t>
                        </p>
                        <br/>
                        Rejected by <t t-out="object.env.user.partner_id.name or ''"></t>.
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

