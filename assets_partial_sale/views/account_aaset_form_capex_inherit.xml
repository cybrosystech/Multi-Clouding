<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_capex_type_asset_form" model="ir.ui.view">
        <field name="name">account.asset.capex.type</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="assets_sub_models_config.account_asset_sub_model_inherit_view"/>
        <field name="arch" type="xml">
            <field name="asset_sub_model_id" position="after">
                <field name="capex_type" string="Capex Type"/>
            </field>
        </field>
    </record>

    <record id="view_currency_attribute_asset_form" model="ir.ui.view">
        <field name="name">account.currency.type</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="attributes">
                <attribute name="invisible">0</attribute>
            </field>
        </field>
    </record>

</odoo>