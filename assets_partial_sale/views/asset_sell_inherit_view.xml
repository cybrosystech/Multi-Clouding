<odoo>
    <record id="asset_modify_form_view" model="ir.ui.view">
        <field name="name">asset.modify.view.form</field>
        <field name="model">asset.modify</field>
        <field name="inherit_id" ref="account_asset.asset_modify_form"/>
        <field name="arch" type="xml">
            <field name="date" position="before">
                <field name="partial_bool"
                       invisible="1"
                />
                <field name="partial_amount" invisible="1"
                       string="Partial Amount"
                />
            </field>
            <field name="loss_account_id" position="replace">
                <field name="loss_account_id"
                       required="gain_or_loss == 'loss'"/>
            </field>
            <field name="gain_account_id" position="replace">
                <field name="gain_account_id"
                       required="gain_or_loss == 'gain'"/>
            </field>
        </field>
    </record>

</odoo>