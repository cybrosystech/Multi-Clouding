<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_lease_liability_schedule_wizard_form" model="ir.ui.view">
            <field name="name">lease.liability.schedule.wizard.form</field>
            <field name="model">lease.liability.schedule.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="contract_ids" widget="many2many_tags" options="{'no_quick_create': True,'no_open': True, 'no_create_edit' : True}"/>
                            <field name="analytic_account_ids" widget="many2many_tags" options="{'no_quick_create': True,'no_open': True, 'no_create_edit' : True}"/>
                            <field name="partner_ids" widget="many2many_tags" options="{'no_quick_create': True,'no_open': True, 'no_create_edit' : True}"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="print_report_xlsx" string="Print" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="view_lease_liability_schedule_wizard_action" model="ir.actions.act_window">
            <field name="name">Lease Liability Schedule</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">lease.liability.schedule.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menuitem_lease_liability_schedule" name="TASC Lease Liability Schedule"
                  parent="lease_management.menuitem_lease_contract_categ"
                  action="view_lease_liability_schedule_wizard_action" sequence="6"/>

    </data>
</odoo>