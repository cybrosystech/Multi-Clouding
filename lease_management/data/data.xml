    <!--        cron jobs ( scheduled actions)-->

         <record model="ir.cron" id="action_notification_expiration">
            <field name="name">Leasee Contract Expiration Notification</field>
            <field name="model_id" ref="model_leasee_contract"/>
            <field name="state">code</field>
            <field name="code">model.leasee_expiration_notification()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

