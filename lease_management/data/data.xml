<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <!--        cron jobs ( scheduled actions)-->

         <record model="ir.cron" id="action_notification_expiration">
            <field name="name">Leasee Contract Expiration Notification</field>
            <field name="model_id" ref="model_leasee_contract"/>
            <field name="state">code</field>
            <field name="code">model.leasee_expiration_notification()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

         <record model="ir.cron" id="leasee_action_expired">
            <field name="name">Leasee Contract Expired</field>
            <field name="model_id" ref="model_leasee_contract"/>
            <field name="state">code</field>
            <field name="code">model.leasee_action_expired()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

         <record model="ir.cron" id="leasee_action_generate_installments">
            <field name="name">Leasee Contract Generate Installments Journal Entries</field>
            <field name="model_id" ref="model_leasee_contract"/>
            <field name="state">code</field>
            <field name="code">model.leasee_action_generate_installments_entries()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

         <record model="ir.cron" id="leasee_action_generate_interest_expense">
            <field name="name">Leasee Contract Generate Interest Expense Journal Entries</field>
            <field name="model_id" ref="model_leasee_contract"/>
            <field name="state">code</field>
            <field name="code">model.leasee_action_generate_interest_entries()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

    <!--        mail activity type-->

        <record id="mail_activity_type_alert_date_expiration_reached" model="mail.activity.type">
            <field name="name">Alert Contact Expiration Date Reached</field>
            <field name="category">default</field>
            <field name="res_model_id" ref="lease_management.model_leasee_contract"/>
            <field name="icon">fa-tasks</field>
            <field name="delay_count">0</field>
        </record>

    </data>
</odoo>