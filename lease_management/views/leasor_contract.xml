<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_leasor_contract_form" model="ir.ui.view">
            <field name="name">leasor.contract.form</field>
            <field name="model">leasor.contract</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_activate" string="Activate" class="oe_highlight" states="draft"
                                type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible=""/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" string="Invoices"
                                    name="action_open_invoices" type="object" icon="fa-pencil-square-o">
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="customer_id" />
                                <field name="leasee_contract_id" />
                                <field name="external_reference_number" />
                                <field name="commencement_date" />
                                <field name="estimated_ending_date" />
                                <field name="account_analytic_id" />
                                <field name="project_site_id" />
                                <field name="type_id" />
                                <field name="location_id" />
                                <field name="prorate" />
                            </group>
                            <group>
                                <field name="installment_amount" />
                                <field name="lease_currency_id" />
                                <field name="lease_contract_period" />
                                <field name="lease_contract_period_type" />
                                <field name="payment_frequency" />
                                <field name="payment_frequency_type" />
                                <field name="installment_product_id" />
                                <field name="installment_journal_id" />
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_leasor_contract_tree" model="ir.ui.view">
            <field name="name">leasor.contract.tree</field>
            <field name="model">leasor.contract</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_leasor_contract_action" model="ir.actions.act_window">
            <field name="name">Leasor Contract</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">leasor.contract</field>
            <field name="view_mode">tree,form,pivot</field>
        </record>

        <menuitem id="menuitem_leasor_contract" name="Leasor Contract"
                  parent="lease_management.menuitem_lease_contract_categ" action="view_leasor_contract_action"
                  sequence="1"/>

    </data>
</odoo>