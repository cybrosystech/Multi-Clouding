<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_cancel_lease_entries_form" model="ir.ui.view">
            <field name="name">cancel.lease.entries.form</field>
            <field name="model">cancel.lease.entries</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="date"/>
                            <field name="asset_journal_include" widget="radio"/>
                            <field name="leasee_contract_id" widget="many2many_tags"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_apply"   string="Apply" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="view_cancel_lease_entries_action" model="ir.actions.act_window">
            <field name="name">Cancel Lease Entries</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cancel.lease.entries</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menuitem_cancel_lease_entries" name="Cancel Lease Entries" parent="menuitem_lease_contract_categ" action="view_cancel_lease_entries_action" sequence="100"/>
    
    </data>
</odoo>