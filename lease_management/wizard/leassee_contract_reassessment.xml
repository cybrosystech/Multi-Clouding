<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_leasee_contract_reassessment_form" model="ir.ui.view">
            <field name="name">leasee.contract.reassessment.form</field>
            <field name="model">leasee.contract.reassessment</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="reassessment_start_Date"/>
                            <field name="new_installment_amount"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_apply"   string="Apply" type="object" class="oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="view_leasee_contract_reassessment_action" model="ir.actions.act_window">
            <field name="name">Lease Contract Reassessment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">leasee.contract.reassessment</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    
    </data>
</odoo>