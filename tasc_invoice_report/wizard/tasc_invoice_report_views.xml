<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="tasc_invoice_report_view_form" model="ir.ui.view">
        <field name="name">TASC Invoice Report Form view</field>
        <field name="model">tasc.invoice.report</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <group>
                        <field name="payment_start_date"/>
                        <field name="company_id"/>
                    </group>
                    <group>
                        <field name="payment_end_date"/>
                    </group>
                </group>
                <footer>
                    <button name="print_report_xlsx" string="PRINT"
                            type="object"
                            default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_tasc_invoice_report_wizard"
            model="ir.actions.act_window">
        <field name="name">TASC Customer Receipt Report</field>
        <field name="res_model">tasc.invoice.report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_tasc_invoice_report"
              name="TASC Customer Receipt"
              parent="cash_flow_statement_report.tasc_dynamic_reports"
              action="action_tasc_invoice_report_wizard"/>
</odoo>
