<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_inherit_account_analytic_account_form_account_types" model="ir.ui.view">
        <field name="name">account.analytic.site.address</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="site_address" attrs="{'invisible':[('analytic_account_type','!=','project_site')]}"/>
            </field>
        </field>
    </record>

    <record id="account_assets_view_project_site_address" model="ir.ui.view">
        <field name="name">account.asset.project.site.address</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="analytic_account_colocation_type.account_assets_view_inherit"/>
        <field name="arch" type="xml">
            <field name="co_location" position="after">
                <field name="site_address"/>
            </field>
        </field>
    </record>

     <record id="account_assets_view_project_site_search" model="ir.ui.view">
        <field name="name">account.asset.project.site.search</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_search"/>
         <field name="arch" type="xml">
             <field name="model_id" position="after">
                 <field name="project_site_id"/>
                 <field name="site_address"/>
             </field>
         </field>
     </record>

</odoo>