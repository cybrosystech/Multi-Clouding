<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="email_template_send_mail_approval_blanket_order"
                model="mail.template">
            <field name="name">Multi Level Blanket Order Approval Mail Template</field>
            <field name="email_from"></field>
            <field name="subject">Blanket Order Approval</field>
            <field name="email_to"></field>
            <field name="model_id" ref="purchase_requisition.model_purchase_requisition"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html" type="html">
                <meta itemprop="name" content="Notification Email"/>
                <table width="100%" cellpadding="0" cellspacing="0">
                    <tr>
                        <td class="content-block">
                            <h3 style="margin: 0;">Require your approval.</h3>
                        </td>
                    </tr>
                    <tr>
                        <td class="content-block">
                           Dear <t t-esc="ctx.get('name', '')">  </t>,
                        </td>
                    </tr>
                    <tr>
                        <td class="content-block">
                            <t t-out="object.name"/> with amount $ <t t-esc="ctx.get('tot_amount', '')">  </t> requires your approval.
                            Please follow the link below to open the item.
                        </td>
                    </tr>
                    <tr>
                        <td class="content-block" itemprop="handler"
                            itemtype="http://schema.org/HttpActionHandler">
                            <a t-attf-href="/web?#id={{ object.id }}&amp;view_type=form&amp;model=account.payment.approval&amp;action="
                               class="btn-basic" itemprop="url">Open
                            </a>
                        </td>
                    </tr>
                </table>
            </field>
        </record>
    </data>
</odoo>