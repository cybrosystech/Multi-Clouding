<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="purchase_requisition_approval_check_view_form" model="ir.ui.view">
            <field name="name">purchase.requisition.approval.check.view.form</field>
            <field name="model">purchase.requisition.approval.check</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="company_id"
                                       groups="base.group_multi_company"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Fields" name="fields">
                                <field name="purchase_requisition_approval_line_ids">
                                    <tree editable="bottom">
                                        <field name="purchase_requisition_approval_check_id"
                                               invisible="1"
                                               column_invisible="1"/>
                                        <field name="name"/>
                                        <field name="from_amount"/>
                                        <field name="to_amount" invisible="1"
                                               column_invisible="1"/>
                                        <field name="approval_seq"/>
                                        <field name="user_ids"
                                               widget="many2many_tags"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="purchase_requisition_approval_check_view_tree" model="ir.ui.view">
            <field name="name">purchase.requisition.approval.check.view.tree</field>
            <field name="model">purchase.requisition.approval.check</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="action_purchase_requisition_approval_check"
                model="ir.actions.act_window">
            <field name="name">Purchase Requisition Approval Check</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.requisition.approval.check</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
            </field>
        </record>

        <menuitem id="menu_purchase_requisition_approval_check"
                  name="Blanket Order Approval Check"
                  parent="purchase.menu_purchase_config"
                  action="action_purchase_requisition_approval_check"
        />
    </data>
</odoo>