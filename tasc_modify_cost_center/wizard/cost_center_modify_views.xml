<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="cost_center_modify_view_form" model="ir.ui.view">
        <field name="name">cost.center.modify.view.form</field>
        <field name="model">cost.center.modify</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="analytic_account_types"/>
                            <field name="project_site_id"/>
                            <field name="from_value"/>
                            <field name="to_value"/>
                        </group>
                        <group>
                            <field name="year"/>
                            <field name="journal_state"/>
                            <field name="journal_ids" widget="many2many_tags" />
                            <field name="records"/>
                            <field name="limit"/>
                        </group>
                    </group>
                    <footer>
                        <button name="modify_cost_center" string="Update"
                                type="object" default_focus="1"
                                class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary"
                                special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cost_center_modify_action" model="ir.actions.act_window">
        <field name="name">Modify Cost Center/Project Site</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cost.center.modify</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_modify_cost_center"
              name="Modify Cost Center/project Site (Journal Item)"
              parent="base.menu_custom"/>
    <menuitem id="menu_modify_cost_center_act"
              action="cost_center_modify_action"
              parent="menu_modify_cost_center"
    />

</odoo>