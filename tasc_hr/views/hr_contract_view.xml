<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_contract_view_form" model="ir.ui.view">
        <field name="name">hr.contract.view.form.inherit.tasc_hr</field>
        <field name="model">hr.contract</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information']/group[@name='main_info']/group[@name='salary_and_advantages']"
                   position="inside">
                <label for="housing"/>
                <div class="o_row" name="housing">
                    <field name="housing" nolabel="1"/>
                    <span>/ month</span>
                </div>
                <label for="mobile_allowance"/>
                <div class="o_row" name="mobile_allowance">
                    <field name="mobile_allowance" nolabel="1"/>
                    <span>/ month</span>
                </div>
                <field name="miscellaneous_1" invisible="1"/>
                <field name="miscellaneous_2" invisible="1"/>
                <label for="transport"/>
                <div class="o_row" name="transport">
                    <field name="transport" nolabel="1"/>
                    <span>/ month</span>
                </div>
                <label for="other"/>
                <div class="o_row" name="other">
                    <field name="other" nolabel="1"/>
                    <span>/ month</span>
                </div>

                <label for="nursery"/>
                <div class="o_row" name="nursery">
                    <field name="nursery" nolabel="1"/>
                    <span>/ month</span>
                </div>
                <label for="entertainment"/>
                <div class="o_row" name="entertainment">
                    <field name="entertainment" nolabel="1"/>
                    <span>/ month</span>
                </div>
                <label for="overtime"/>
                <div class="o_row" name="overtime">
                    <field name="overtime" nolabel="1"/>
                    <span>/ month</span>
                </div>
                <label for="per_diem"/>
                <div class="o_row" name="per_diem">
                    <field name="per_diem" nolabel="1"/>
                    <span>/ month</span>
                </div>
                <label for="zain_invoice"/>
                <div class="o_row" name="zain_invoice">
                    <field name="zain_invoice" nolabel="1"/>
                    <span>/ month</span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>