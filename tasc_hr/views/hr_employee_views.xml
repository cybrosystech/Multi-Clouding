<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.form.view.inherit.tasc_hr</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='personal_information']/group[1]/group[4]"
                   position="inside">
                <field name="date_of_birth_ids">
                    <form>
                        <field name="dob"/>
                        <field name="employee_id" invisible="1"/>
                    </form>
                    <tree editable="bottom">
                        <field name="dob"/>
                        <field name="employee_id" invisible="1"/>
                    </tree>
                </field>
                <field name="child_below_18"/>
                <field name="child_below_4"/>
            </xpath>
            <xpath expr="//page[@name='personal_information']/group[1]/group[3]"
                   position="inside">
                <field name="spouse_working"
                       attrs="{'invisible': [('marital', 'not in', ['married', 'cohabitant'])]}"
                       groups="hr.group_hr_user"/>
            </xpath>
            <xpath expr="//page[@name='personal_information']/group[1]/group[2]"
                   position="inside">
                <field name="social_security"/>
            </xpath>
            <xpath expr="//form/sheet/group[1]/group[2]/field[@name='department_id']"
                   position="after">
                <field name="sub_department_id"/>
            </xpath>
        </field>
    </record>
</odoo>