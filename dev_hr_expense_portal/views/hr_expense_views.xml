<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_my_expenses_tree" model="ir.ui.view">
        <field name="name">hr.expense.view.tree.inherit.dev_hr_expense_portal
        </field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.view_my_expenses_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//header"
                   position="inside">
                <button name="action_submit_expenses_all_employees"
                        string="Create Report(All Employees)"
                        type="object" class="oe_highlight o_expense_submit"
                />
            </xpath>
        </field>
    </record>

    <record id="hr_expense_view_form" model="ir.ui.view">
        <field name="name">hr.expense.view.form.inherit.dev_hr_expense_portal
        </field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group[1]/group[2]/field[@name='analytic_account_id']"
                   position="after">
                <field name="project_site_id"/>
                <field name="is_manager_approved" invisible="1"/>
            </xpath>
            <xpath expr="//header/field[@name='state']"
                   position="replace">
                <field name="state" widget="statusbar"
                       statusbar_visible="waiting_approval,draft,reported,approved,done,refused"/>
            </xpath>
        </field>
    </record>

    <record id="view_hr_expense_sheet_form" model="ir.ui.view">
        <field name="name">
            hr.expense.sheet.view.form.inherit.dev_hr_expense_portal
        </field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='expense_line_ids']/tree/field[@name='analytic_account_id']"
                   position="replace">
                <field name="analytic_account_id" optional="show"
                       domain="['|', ('company_id', '=', parent.company_id), ('company_id', '=', False),('analytic_account_type','=','cost_center')]"
                       groups="analytic.group_analytic_accounting"/>
            </xpath>
            <xpath expr="//field[@name='expense_line_ids']/tree/field[@name='analytic_account_id']"
                   position="after">
                <field name="project_site_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_hr_expense_sheet_tree" model="ir.ui.view">
        <field name="name">hr.expense.sheet.dev_hr_expense_portal</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_tree"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <header>
                    <button name="action_create_journal_entry"
                            string="Create Entry"
                            type="object"
                    />
                </header>
            </xpath>
        </field>
    </record>

</odoo>