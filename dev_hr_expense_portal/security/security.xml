<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="hr_expense_rule_group_user_portal" model="ir.rule">
            <field name="name">Hr Expense Personal Access</field>
            <field ref="hr_expense.model_hr_expense" name="model_id"/>
            <field name="domain_force">
                ['|','|',('employee_id.user_id','=',user.id),('employee_id.parent_id.user_id','=',user.id),('employee_id.expense_manager_id','=', user.id)]
            </field>
            <field name="groups"
                   eval="[(4, ref('base.group_portal')),(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
