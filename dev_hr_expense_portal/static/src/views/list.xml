<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
        <t t-name="dev_hr_expense_portal.ListButtons"
           t-inherit="hr_expense.ListButtons" t-inherit-mode="primary">
            <xpath expr="//div[hasclass('o_list_buttons')]" position="inside">
                 <button t-if="displayCreateReportAllEmployees()"
                         class="d-none d-md-block btn btn-secondary"
                         t-on-click="() => this.action_show_expenses_to_submit_all_employees()">
                Create Report (All Employees)
            </button>
                <button t-if="displayApproveExpense()"
                        class="d-none d-md-block btn btn-secondary"
                        t-on-click="() => this.action_approve()">
               Approve
            </button>
                <button t-if="displayPost()"
                        class="d-none d-md-block btn btn-secondary"
                        t-on-click="() => this.onClick('action_create_journal_entry')">
                Post Entries (All Employees)
            </button>
            </xpath>

        </t>
</templates>