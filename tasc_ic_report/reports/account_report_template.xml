<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="external_layout_inv_template">
        <!-- Multicompany -->
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>
        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>

        <div t-attf-class="header o_company_#{company.id}_layout"
             t-att-style="report_header_style">
            <div class="o_boxed_header">
                <div class="row mb8">
                    <div class="col-7">
                        <h4 class="mt0" t-field="company.report_header"/>
                        <div name="company_address">
                            <span style="font-weight:bold"
                                  t-field="company.name"/>
                        </div>
                        <div style="margin-bottom: -1rem;">
                            <address t-field="company.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                        </div>
                        <div>
                            TRN:
                            <span t-field="company.vat"/>
                        </div>
                    </div>
                    <div class="col-5">
                        <img t-if="company.logo"
                             style="max-width: 100%; height: 70px;"
                             t-att-src="image_data_uri(company.logo)"
                             alt="Logo"/>
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div style="border-bottom: 1px solid black;"/>
            </div>
        </div>

        <div t-attf-class="article" t-att-data-oe-model="o and o._name"
             t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-5">
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>
    </template>

    <template id="report_account_balance">
        <t t-call="web.html_container">
            <t t-call="tasc_ic_report.external_layout_inv_template">
                <div class="page">
                    <div class="oe_structure"/>
                    <p style="text-align:center;font-weight:bold;font-size:18px;">
                        Debit Note
                    </p>
                    <div class="row">
                        <div class="col-6">
                            <div>
                                <span style="font-weight:bold">Bill To:</span>
                            </div>
                            <div>
                                <span t-field="cmpny.partner_id"
                                      t-options='{"widget": "contact", "fields": ["name", "address"]}'/>
                            </div>
                        </div>
                        <div class="col-6">
                            <div>
                                <span style="font-weight:bold">Debit Note Date:
                                </span>
                                <t t-esc="data['ending_balance_date']"/>
                            </div>
                            <div>
                                <span style="font-weight:bold">Currency:
                                </span>
                                <t t-esc="data['currency']"/>
                            </div>
                        </div>
                    </div>

                    <style>
                        .custom_table_lines thead th, .custom_table_lines tbody
                        td{
                        border: 2px solid #636161;
                        padding: 5px;
                        }
                        .custom_table_lines thead th{
                        background: #ccc;
                        color: #636161;
                        }
                        .box{
                        width: 100%;
                        border: 1px solid #ccc !important;
                        margin-bottom: 10px;
                        padding: 5px;
                        }
                        .totals_box{
                        border: 1px solid #ccc !important;
                        margin-bottom: 10px;
                        padding: 5px;
                        float: right;
                        width: 25%;
                        }
                        .totals_box{
                        width: 25%;
                        position: relative;
                        right: 0;
                        }
                        .totals_amount_line{
                        padding: 40px 20px;
                        }
                    </style>
                    <br/>
                    <div>
                        <table class="custom_table_lines" width="100%">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Description</th>
                                    <th>Qty</th>
                                    <th>Unit price
                                    </th>
                                    <th>Tax %
                                    </th>
                                    <th>Total Amount
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="tot" t-value="0"/>
                                <t t-set="line_index" t-value="0"/>
                                <t t-foreach="res" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-set="line_index"
                                                  t-value="line_index+1"/>

                                            <span t-esc="line_index"/>
                                        </td>
                                        <td>
                                            <span t-esc="line['name']"/>
                                        </td>
                                        <td>

                                            <span t-esc="1"/>
                                        </td>
                                        <td>

                                            <span t-esc="line['balance']"/>
                                            <t t-set="tot"
                                               t-value="tot+line['balance']"/>
                                        </td>
                                        <td>

                                            <span>0 %</span>
                                        </td>
                                        <td>

                                            <span t-esc="line['balance']"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-10 text-right">
                        <span style="font-weight:bold">Sub Total
                        </span>
                        <br/>
                        <span style="font-weight:bold">
                            <span>Tax</span>
                        </span>
                        <br/>
                        <span style="font-weight:bold">Total
                        </span>
                    </div>
                    <div class="col-3">
                        <span t-esc="env.company.currency_id.symbol"/>
                        <span style="font-weight:bold"
                              t-esc="'{:20,.2f}'.format(tot)"/>
                        <br/>
                        <span t-esc="env.company.currency_id.symbol"/>
                        <span style="font-weight:bold"
                              t-esc="'{:20,.2f}'.format(0)"/>
                        <br/>
                        <span t-esc="env.company.currency_id.symbol"/>
                        <span style="font-weight:bold"
                              t-esc="'{:20,.2f}'.format(tot)"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <img t-if="env.company.company_stamp"
                             class="float-right"
                             style="max-width: 100%; height: 70px;"
                             t-att-src="image_data_uri(env.company.company_stamp)"
                             alt="Stamp"/>
                    </div>
                </div>

                <div class="row" style="position:fixed;top:1100px;line-break:avoid;width:1000px;">
                        <div class="col-lg">
                            <span style="font-weight:bold;">This is an
                                automated
                                Debit Note and no signature required.
                            </span>
                        </div>
                </div>

                <br/>
                <br/>
                <div class="page" style="page-break-before:always;">
                    <div class="oe_structure"/>
                    <p style="text-align:center;font-weight:bold;font-size:18px;">
                        Transaction Details
                    </p>
                    <br/>
                    <t t-foreach="res" t-as="line">
                        <br/>
                        <span style="text-align:center;font-weight:bold;font-size:18px;"
                              t-esc="line['name']"/>
                        -
                        <span style="text-align:center;font-weight:bold;font-size:18px;"
                              t-esc="line['code']"/>

                        <br/>
                        <table class="custom_table_lines" width="100%">
                            <thead>
                                <tr>
                                    <th>No.</th>
                                    <th>Date</th>
                                    <th>Journal</th>
                                    <th>Partner
                                    </th>
                                    <th>Label
                                    </th>
                                    <th>Debit
                                    </th>
                                    <th>Credit
                                    </th>
                                    <th>Amount in Currency
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="totall" t-value="0"/>
                                <t t-set="line_index" t-value="0"/>
                                <t t-foreach="result" t-as="lines">
                                    <t t-if="lines['account_id']==line['id']">
                                        <tr>
                                            <td>
                                                <span t-set="line_index"
                                                      t-value="line_index+1"/>

                                                <span t-esc="line_index"/>
                                            </td>
                                            <td>
                                                <span t-esc="lines['date']"/>
                                            </td>
                                            <td>

                                                <span t-esc="lines['journal']"/>
                                            </td>
                                            <td>

                                                <span t-esc="lines['partner_name']"/>

                                            </td>
                                            <td>
                                                <span t-esc="lines['label']"/>
                                            </td>
                                            <td>
                                                <span t-esc="lines['debit']"/>
                                            </td>
                                            <td>
                                                <span t-esc="lines['credit']"/>
                                            </td>
                                            <td>

                                                <span t-esc="lines['amount_currency']"/>

                                            </td>
                                            <span t-set="totall"
                                                  t-value="totall+lines['debit']-lines['credit']"/>
                                        </tr>
                                    </t>

                                </t>
                            </tbody>
                        </table>
                        <br/>
                        <div class="row">
                            <div class="col-10 text-right">
                                <span style="font-weight:bold">Total :
                                </span>
                            </div>
                            <div class="col-3">
                                <span t-esc="env.company.currency_id.symbol"/>
                                <span style="font-weight:bold"
                                      t-esc="'{:20,.2f}'.format(abs(totall))"/>
                                <br/>
                            </div>
                        </div>

                    </t>
                </div>
            </t>
        </t>
    </template>
</odoo>