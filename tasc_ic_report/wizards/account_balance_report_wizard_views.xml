<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="account_balance_report_wizard_view_form" model="ir.ui.view">
        <field name="name">account.ic.balance.report.wizard.form</field>
        <field name="model">account.ic.balance.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="company_id"/>
                    <field name="account_ids" widget="many2many_tags"/>
                    <field name="ending_balance_date"/>
                    <field name="currency_id"/>
                </group>
                <footer>
                    <button name="generate_pdf_report" string="PDF"
                            type="object" default_focus="1"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_balance_report_wizard"
            model="ir.actions.act_window">
        <field name="name">Account IC Balance Report Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.ic.balance.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="account_balance_report_wizard_view_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_account_balance_report" name="TASC IC Report"
              parent="cash_flow_statement_report.tasc_dynamic_reports"
              action="action_account_balance_report_wizard"
    />

</odoo>
