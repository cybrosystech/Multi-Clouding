<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="consolidation_report_wizard_form" model="ir.ui.view">
        <field name="name">report.consolidation.wizard.form</field>
        <field name="model">wizard.consolidation.report</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="report_type"/>
                    <field name="consolidation_id"/>
                    <field name="consolidation_period_id"/>
                    <field name="consolidation_config_id"/>
                </group>
                <footer>
                    <button name="generate_xlsx_report" string="Excel"
                            type="object" default_focus="1"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="consolidation_report_wizard_action" model="ir.actions.act_window">
        <field name="name">consolidation report action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.consolidation.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="consolidation_report_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_consolidation_custom_reports" name="Consolidation Report Wizard" parent="account_consolidation.menu_consolidation_operations"
                  sequence="30" action="consolidation_report_wizard_action"/>


</odoo>