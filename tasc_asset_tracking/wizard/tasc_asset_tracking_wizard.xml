<?xml version="1.0" encoding="utf-8"?>
<odoo>
         <record id="view_tasc_asset_tracking_wizard_form" model="ir.ui.view">
        <field name="name">tasc.asset.tracking.wizard.form</field>
        <field name="model">tasc.asset.tracking.wizard</field>
        <field name="arch" type="xml">
            <form string="TASC Asset Tracking Report">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="company_id" invisible="1"/>
                            Asset Tracking Report Generator
                        </h1>
                    </div>
                    <group>
                        <group name="company_info" string="Company Information">
                            <field name="company_id"
                                   options="{'no_create': True, 'no_edit': True}"
                                   widget="selection"
                                   required="1"/>
                        </group>
                        <group name="filters" string="Report Configuration">
                            <field name="closed_asset"
                                   widget="radio"
                                   required="1"/>
                        </group>
                    </group>

                    <group>
                        <group name="date_range" string="Date Range Filter">
                            <field name="date_from"
                                   help="Start date for asset acquisition date filter"/>
                            <field name="date_to"
                                   required="1"
                                   help="End date for asset acquisition date filter"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="print_asset_tracking_xlsx"
                            string="PRINT"
                            type="object"
                            class="btn-primary"
                            icon="fa-file-excel-o"
                            help="Click to generate and download the Excel report"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"
                            icon="fa-times"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_tasc_asset_tracking_wizard" model="ir.actions.act_window">
        <field name="name">TASC Asset Tracking Report</field>
        <field name="res_model">tasc.asset.tracking.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_tasc_asset_tracking_wizard_form"/>
        <field name="context">{}</field>
    </record>
    <menuitem id="menu_asset_tracking_report"
              name="TASC Asset Tracking Report"
              parent="cash_flow_statement_report.tasc_dynamic_reports"
              action="action_tasc_asset_tracking_wizard"/>
</odoo>