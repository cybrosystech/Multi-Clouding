<?xml version="1.0" ?>
<odoo>
    <record model="ir.ui.view" id="view_oidc_provider_form">
        <field name="name">auth.oidc.provider.form</field>
        <field name="model">auth.oauth.provider</field>
        <field name="inherit_id" ref="auth_oauth.view_oauth_provider_form" />
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="auth_flow" />
                <field
                    name="claim_map"
                    placeholder="from:to email:user_id"
                    attrs="{'invisible':[('auth_flow','=','access_token')]}"
                />
            </field>
            <field name="client_id" position="attributes">
                <attribute name="placeholder">Client (application) ID</attribute>
            </field>
            <field name="client_id" position="after">
                <field name="client_secret" 
                    placeholder="Secret key"
                    attrs="{'invisible':[('auth_flow','=','access_token')]}" password="True"
                />
            </field>
            <field name="auth_endpoint" position="attributes">
                <attribute name="placeholder">https://login.microsoftonline.com/{tenant-id}/oauth2/v2.0/authorize</attribute>
            </field>
            <field name="scope" position="attributes">
                <attribute name="placeholder">openid profile email</attribute>
            </field>
            <field name="validation_endpoint" position="attributes">
                <attribute name="attrs">{'invisible':[('auth_flow','=','code')]}</attribute>
            </field>
            <field name="validation_endpoint" position="after">
                <field name="token_endpoint" 
                    placeholder="https://login.microsoftonline.com/{tenant-id}/oauth2/v2.0/token"
                    attrs="{'invisible':[('auth_flow','=','access_token')]}"
                />
                <field name="jwks_endpoint"
                    placeholder="https://login.microsoftonline.com/{tenant-id}/discovery/v2.0/keys"
                    attrs="{'invisible':[('auth_flow','=','access_token')]}"
                />
            </field>
            <field name="data_endpoint" position="attributes">
                <attribute name="attrs">{'invisible':[('auth_flow','=','code')]}</attribute>
            </field>
        </field>
    </record>
</odoo>
