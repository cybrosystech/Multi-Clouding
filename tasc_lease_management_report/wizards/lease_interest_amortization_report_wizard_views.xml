<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="lease_interest_amortization_report_wizard_view"
            model="ir.ui.view">
        <field name="name">Lease interest amortization report wizard view</field>
        <field name="model">lease.interest.amortization.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <group>
                        <field name="lease_contract_ids"
                               widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="state"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="start_date"/>
                    </group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <footer>
                    <button name="print_report_xlsx" string="PRINT"
                            type="object"
                            default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_lease_interest_and_amortization_excel_report"
            model="ir.actions.act_window">
        <field name="name">Lease Interest and Amortization Excel Report</field>
        <field name="res_model">lease.interest.amortization.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_lease_interest_and_amortization_excel_report"
              name="Lease Interest and Amortization Report"
              parent="lease_management.menuitem_lease_contract_categ"
              action="action_lease_interest_and_amortization_excel_report"/>
</odoo>