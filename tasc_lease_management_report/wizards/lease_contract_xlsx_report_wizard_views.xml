<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="lease_contract_xlsx_report_view" model="ir.ui.view">
        <field name="name">Lease Contract xlsx report view</field>
        <field name="model">lease.contract.xlsx.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <field name="lease_contract_ids" widget="many2many_tags"/>
                </group>
                <group>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button name="print_report_xlsx" string="PRINT" type="object"
                            default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_lease_contract_xlsx_report_wizard" model="ir.actions.act_window">
        <field name="name">Lease Contract Excel Report</field>
        <field name="res_model">lease.contract.xlsx.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_lease_contract_excel_report" name="Payment Aging Report"
              parent="lease_management.menuitem_lease_contract_categ"
              action="action_lease_contract_xlsx_report_wizard"/>
</odoo>