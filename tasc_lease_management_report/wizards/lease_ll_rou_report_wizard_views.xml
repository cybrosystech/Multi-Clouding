<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="lease_ll_rou_report_wizard_view_form"
            model="ir.ui.view">
        <field name="name">Lease LL and ROU report wizard view</field>
        <field name="model">lease.ll.rou.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <group>
                        <field name="lease_contract_ids"
                               widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="state"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="end_date"/>
                    </group>
                </group>
                <footer>
                    <button name="print_report_xlsx" string="PRINT"
                            type="object"
                            default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_lease_ll_rou_report_wizard"
            model="ir.actions.act_window">
        <field name="name">Lease LL and ROU Report</field>
        <field name="res_model">lease.ll.rou.report.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_lease_ll_and_rou_report"
              name="TASC Lease LL and ROU Report"
              parent="lease_management.menuitem_lease_contract_categ"
              sequence="14"
              action="action_lease_ll_rou_report_wizard"/>
</odoo>