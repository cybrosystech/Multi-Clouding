<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="lease_management_report_view" model="ir.ui.view">
        <field name="name">Leasee report view</field>
        <field name="model">leasee.management.report</field>
        <field name="arch" type="xml">
            <form string="Lease Report Configuration">
                <header>
                    <button name="action_schedule_lease_report"
                            string="Schedule Interest Amortization report"
                            type="object"/>
                     <button name="action_schedule_ll_rou_report"
                            string="Schedule LL ROU report"
                            type="object"/>
                    <button name="action_schedule_ll_aging_report"
                            string="Schedule LL Aging report"
                            type="object"/>
                    <button name="action_schedule_payment_aging_report"
                            string="Schedule Payment Aging report"
                            type="object"/>
                    <button name="action_print_report_payment_aging"
                            string="Print XLSX (Payment Aging)"
                            type="object"/>
                    <button name="action_print_report_ll_aging"
                            string="Print XLSX (LL Aging)"
                            type="object"/>
                    <button name="action_print_report_ll_rou"
                            string="Print XLSX (LL ROU)"
                            type="object"/>
                    <button name="action_print_report_interest_and_amortizations"
                            string="Print XLSX (Interest and Amortizations)"
                            type="object"/>

                </header>
                <group>
                    <group string="Payment Aging Report">
                        <field name="payment_aging_as_of_date"/>
                        <field name="payment_aging_limit"/>
                        <field name="report_values_payment_aging" invisible="1"/>

                    </group>
                    <group string="LL Aging Report">
                        <field name="ll_aging_as_of_date"/>
                        <field name="ll_aging_limit"/>
                        <field name="report_values_ll_aging" invisible="1"/>

                    </group>
                    <group string="Interest and Amortization Report">
                        <field name="interest_amort_start_date"/>
                        <field name="interest_amort_end_date"/>
                        <field name="interest_amort_state"/>
                        <field name="interest_amort_limit"/>
                        <field name="report_values_interest_and_amortization" invisible="1"/>

                    </group>
                    <group string="LL ROU Report">
                        <field name="ll_rou_as_of_date"/>
                        <field name="ll_rou_state"/>
                        <field name="ll_rou_limit"/>
                        <field name="report_values_ll_rou" invisible="1"/>

                    </group>
                </group>
                <group>
                    <field name="lease_contract_ids" widget="many2many_tags"/>
                    <field name="company_id" invisible="1"/>
                </group>
                <group>
                </group>
            </form>
        </field>
    </record>

    <record id="action_lease_management_report"
            model="ir.actions.act_window">
        <field name="name">Lease Reports</field>
        <field name="res_model">leasee.management.report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_lease_management_report" name="Lease Reports"
              parent="lease_management.menuitem_lease_contract_categ"
              action="action_lease_management_report"/>
</odoo>