<odoo>
    <record id="inherit_view_leasee_contract_form" model="ir.ui.view">
        <field name="name">leasee.contract.form.inherit</field>
        <field name="model">leasee.contract</field>
        <field name="inherit_id" ref="lease_management.view_leasee_contract_form"/>
        <field name="arch" type="xml">
            <field name="remaining_lease_liability" position="after">
                <field name="company_id" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="lease_management_search_view" model="ir.ui.view">
        <field name="name">leasee.contract.form.search</field>
        <field name="model">leasee.contract</field>
        <field name="arch" type="xml">
            <search string="Search">
                <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="external_reference_number" string="Eternal reference"/>
                <field name="project_site_id"/>
            </search>
        </field>
    </record>
</odoo>