<odoo>

    <record id="account_journal_dashboard_kanban_view_inherit_vendor_bill"
            model="ir.ui.view">
        <field name="name">account.journal.dashboard.kanban.vendor</field>
        <field name="model">account.journal</field>
        <field name="inherit_id"
               ref="account.account_journal_dashboard_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//t[@id='account.JournalBodySalePurchase']//div[hasclass('o_kanban_primary_right')]"
                   position="inside">
                <div class="row" t-if="dashboard.number_to_approve">
                    <div class="col overflow-hidden text-left">
                        <a type="object" name="open_action"
                           context="{'search_default_to_approve': 1}">
                            <span t-if="journal_type == 'purchase'"
                                  title="Bill to approve">
                                <t t-esc="dashboard.number_to_approve"/>
                                Bills to approve
                            </span>
                        </a>
                        <a type="object" name="open_action"
                           context="{'search_default_to_approve': 1}">
                            <span t-if="journal_type == 'sale'"
                                  title="Bill to approve">
                                <t t-esc="dashboard.number_to_approve"/>
                                Invoices to approve
                            </span>
                        </a>
                    </div>
                    <div class="col-auto text-right">
                        <span>
                            <t t-esc="dashboard.sum_to_approve"/>
                        </span>
                    </div>
                </div>
            </xpath>
            <xpath expr="//t[@id='account.JournalBodySalePurchase']//div[hasclass('o_kanban_primary_right')]//div[@t-if='dashboard.number_waiting']"
                   position="replace">
                <div class="row" t-if="dashboard.number_waiting">
                    <div class="col overflow-hidden text-left">
                        <a type="object" t-if="journal_type == 'sale'"
                           name="open_action"
                           context="{'search_default_unpaid':1, 'search_default_posted':1, 'search_default_partial': 1}"
                           id="account_dashboard_sale_pay_link">
                            <t t-esc="dashboard.number_waiting"/>
                            Unpaid Invoices
                        </a>

                        <a type="object" t-if="journal_type == 'purchase'"
                           name="open_action"
                           context="{'search_default_unpaid':1, 'search_default_posted':1, 'search_default_partial':1}"
                           id="account_dashboard_purchase_pay_link">
                            <t t-esc="dashboard.number_waiting"/>
                            Bills to Pay
                        </a>
                    </div>
                    <div class="col-auto text-right">
                        <span>
                            <t t-esc="dashboard.sum_waiting"/>
                        </span>
                    </div>
                </div>
            </xpath>
            <xpath expr="//t[@t-name='JournalMiscelaneous']//div[hasclass('o_kanban_primary_right')]"
                   position="inside">
                <div class="row">
                    <div class="col overflow-hidden text-left">
                        <a type="object" t-if="journal_type == 'general'"
                           name="open_journal_entry_to_approve"
                           id="account_dashboard_misc_journal">
                            <span title="Journals to approve">
                                <t t-esc="dashboard.journals_to_approve"/>
                                Journals to approve
                            </span>
                        </a>
                    </div>
                    <div class="col-auto text-right">
                        <span>
                            <t t-esc="dashboard.journal_sum_to_approve"/>
                        </span>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_move_journal_to_approve" model="ir.actions.act_window">
        <field name="name">Journal Entries</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_id" ref="account.view_move_tree"/>
        <field name="search_view_id" ref="account.view_account_move_filter"/>
        <field name="context">{'view_no_maturity': True, 'default_move_type': 'entry'}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a journal entry
            </p>
            <p>
                A journal entry consists of several journal items, each of
                which is either a debit or a credit transaction.
            </p>
        </field>
    </record>


</odoo>