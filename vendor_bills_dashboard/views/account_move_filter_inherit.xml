<odoo>
    <!--    <added a filter menu in account.move to show the records to_approve>-->
    <record id="account_move_filter_view_inherit_to_approve" model="ir.ui.view">
        <field name="name">account.move.filter.vendor</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <filter name="cancel" position="after">
                <filter name="to_approve" string="To Approve" domain="[('state', '=', 'to_approve')]"/>
            </filter>
        </field>
    </record>

    <!--    <Updated the attributes of field account_analytic_id>-->
    <record id="account_asset_analytic_modifier" model="ir.ui.view">
        <field name="name">account.asset.analytic.modifier</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <field name="account_analytic_id" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'not in',
                    ['model', 'draft', 'open'])]}</attribute>
            </field>
        </field>
    </record>

</odoo>