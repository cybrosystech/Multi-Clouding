<odoo>
    <record id="view_sample_report_managed_wizard_form" model="ir.ui.view">
        <field name="name">report.sample.managed.wizard.form</field>
        <field name="model">sample.report.xlsx.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>

                </group>
                <footer>
                    <button name="generate_xlsx_report" string="Excel"
                            type="object" default_focus="1"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary"
                            special="cancel"/>
            </footer>
            </form>
        </field>
    </record>

    <record id="sample_report_managed_wizard_action" model="ir.actions.act_window">
        <field name="name">Sample Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sample.report.xlsx.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_sample_report_managed_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="sample_report_managed_menu_id"
              name="Sample Report"
              parent="account.account_reports_management_menu"
              action="sample_report_managed_wizard_action"
              sequence="25"
    />
</odoo>