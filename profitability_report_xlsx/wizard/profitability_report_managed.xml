<odoo>
    <record id="view_profitability_report_managed_wizard_form" model="ir.ui.view">
        <field name="name">report.profitability.managed.wizard.form</field>
        <field name="model">profitability.report.managed.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="lease_anchor_tenant"
                               widget="many2many_tags"/>
                        <field name="lease_colo_tenant"
                               widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="additional_space_revenue"
                               widget="many2many_tags"/>
                        <field name="bts_revenue" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="active_sharing_fees"
                               widget="many2many_tags"/>
                        <field name="discount" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="rou_depreciation" widget="many2many_tags"/>
                        <field name="group" invisible="1"/>
                    </group>
                    <group>
                        <field name="fa_depreciation" widget="many2many_tags"/>
                        <field name="lease_finance_cost" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <field name="site_maintenance_managed" class="oe_inline" widget="many2many_tags"/>
<!--                    <label for="site_maintenance_managed" string="Site Maintenance"/>-->
<!--                    <div>-->
<!--                        <field name="site_maintenance_managed" class="oe_inline" widget="many2many_tags"/>-->
<!--                        <span>To</span>-->
<!--                        <field name="site_maintenance_managed_lim" class="oe_inline" widget="many2many_tags"/>-->
<!--                    </div>-->
                </group>
                <group>
                    <group>
                        <field name="site_rent" widget="many2many_tags"/>
                        <field name="security" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="service_level_credits" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="period"/>
                    </group>
                    <group>
                        <field name="company_id"/>
                    </group>
                </group>
                <group>
                    <label for="from_date" string="From"
                           invisible="period !='custom'"
                           />
                    <div>
                        <field name="from_date" class="oe_inline"
                               invisible="period != 'custom'"
                               required="period == 'custom'"
                               />
                        <label for="to_date" string="To"
                               invisible="period != 'custom'"
                               />
                        <field name="to_date" class="oe_inline"
                               invisible="period != 'custom'"
                               required="period == 'custom'"
                               />
                    </div>
                </group>
                <footer>
                    <button name="generate_xlsx_report" string="Excel"
                            type="object" default_focus="1"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="profitable_report_managed_wizard_action" model="ir.actions.act_window">
        <field name="name">Profitability Report Managed</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">profitability.report.managed.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_profitability_report_managed_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="profitable_report_managed_menu_id"
              name="Profitability Report - managed"
              parent="account.account_reports_management_menu"
              action="profitable_report_managed_wizard_action"
              sequence="20"
    />

</odoo>