<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_profitability_report_managed_form" model="ir.ui.view">
        <field name="name">report.profitability.managed.form</field>
        <field name="model">profitability.report.managed</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="schedule_managed_cron" string="Schedule Managed report"
                            type="object" />
                    <button name="action_get_report" string="Print XLSX"
                            type="object" />
                </header>
                <group>
                    <group>
                        <field name="lease_anchor_tenant"
                               widget="many2many_tags"/>
                        <field name="lease_colo_tenant"
                               widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="additional_space_revenue"
                               widget="many2many_tags"/>
                        <field name="bts_revenue" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="active_sharing_fees"
                               widget="many2many_tags"/>
                        <field name="discount" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="rou_depreciation" widget="many2many_tags"/>
<!--                        <field name="analytic_account_group" invisible="1"/>-->
                    </group>
                    <group>
                        <field name="fa_depreciation" widget="many2many_tags"/>
                        <field name="lease_finance_cost"
                               widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <field name="site_maintenance_managed" class="oe_inline"
                           widget="many2many_tags"/>
                </group>
                <group>
                    <group>
                        <field name="site_rent" widget="many2many_tags"/>
                        <field name="security" widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="service_level_credits"
                               widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="period"/>
                    </group>
                    <group>
                        <field name="company_id"/>
                    </group>
                </group>
                <group>
                    <label for="from_date" string="From"
                           attrs="{'invisible': [('period', '!=', 'custom')]}"/>
                    <div>
                        <field name="from_date" class="oe_inline"
                               attrs="{'invisible': [('period', '!=', 'custom')], 'required': [('period', '=', 'custom')]}"/>
                        <label for="to_date" string="To"
                               attrs="{'invisible': [('period', '!=', 'custom')]}"/>
                        <field name="to_date" class="oe_inline"
                               attrs="{'invisible': [('period', '!=', 'custom')], 'required': [('period', '=', 'custom')]}"/>
                    </div>
                </group>
                <group>
                    <field name="cron_id" required="1"/>
                    <field name="json_report_values"  invisible="1"/>
                </group>
                <group>
                    <field name="current_filter"/>
                    <field name="limits_pr" readonly="1"/>
                    <field name="end_limit" invisible="1"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_profitability_report_managed_tree" model="ir.ui.view">
        <field name="name">report.profitability.managed.tree</field>
        <field name="model">profitability.report.managed</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="lease_anchor_tenant"
                       widget="many2many_tags"/>
                <field name="lease_colo_tenant"
                       widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="action_profitability_managed" model="ir.actions.act_window">
        <field name="name">Profitability Managed</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">profitability.report.managed</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">

            </p>
            <p>

            </p>
        </field>
    </record>

    <menuitem parent="account.menu_finance_entries" id="profitability_tab_accounting" name="Profitability" sequence="12" groups=""/>

    <menuitem id="menu_profitability_managed" name="Profitability Managed"
                  parent="profitability_tab_accounting" action="action_profitability_managed"
                  sequence="100"/>


</odoo>