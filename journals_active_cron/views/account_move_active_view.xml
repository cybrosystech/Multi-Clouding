<odoo>
    <record id="view_active_bool_form" model="ir.ui.view">
        <field name="name">account.active.bool</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="active"/>
            </field>
        </field>
    </record>

    <record id="account.ir_cron_auto_post_draft_entry" model="ir.cron">
        <field name="code">model._autopost_draft_entries(exclude_journal='IFRS')</field>
    </record>

    <record id="ir_cron_auto_post_draft_ifrs_entry" model="ir.cron">
        <field name="name">Auto post draft IFRS journal entries</field>
        <field name="interval_number">1</field>
        <field name="interval_type">months</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_account_move"/>
        <field name="code">model._autopost_draft_ifrs_entries()</field>
        <field name="state">code</field>
    </record>

</odoo>