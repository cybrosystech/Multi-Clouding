<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="email_template_send_mail_approval_payment"
                model="mail.template">
            <field name="name">Multi Level Payment Approval Mail Template
            </field>
            <field name="email_from">${object.company_id.email}</field>
            <field name="subject">Payment Approval</field>
            <field name="email_to"></field>
            <field name="model_id" ref="tasc_payment_approval.model_account_payment_approval"/>
            <field name="auto_delete" eval="True"/>
<!--            <field name="lang">${object.partner_id.lang}</field>-->
            <field name="body_html" type="html">
                <meta itemprop="name" content="Notification Email"/>
                <table width="100%" cellpadding="0" cellspacing="0">
                    <tr>
                        <td class="content-block">
                            <h3 style="margin: 0;">Pending approval</h3>
                        </td>
                    </tr>
                    <tr>
                        <td class="content-block">
                            Hello ${ctx['name']},
                        </td>
                    </tr>
                    <tr>
                        <td class="content-block">
                            ${object.batch_name} requires your approval.
                            Please follow the link below to open the item.
                        </td>
                    </tr>
                    <tr>
                        <td class="content-block" itemprop="handler"
                            itemtype="http://schema.org/HttpActionHandler">
                            <a href="/web?#id=${object.id}&amp;view_type=form&amp;model=account.payment.approval&amp;action="
                               class="btn-basic" itemprop="url">Open
                            </a>
                        </td>
                    </tr>
                </table>
            </field>
        </record>
    </data>
</odoo>