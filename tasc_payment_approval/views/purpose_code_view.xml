<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purpose_code_view_form" model="ir.ui.view">
        <field name="name">Purpose Code View Form</field>
        <field name="model">purpose.code</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="code" required="1"/>
                    <field name="description"/>
                    <field name="company_ids" widget="many2many_tags"/>
                </group>
            </form>
        </field>
    </record>
    <record id="purpose_code_view_tree" model="ir.ui.view">
        <field name="name">Purpose Code View Tree</field>
        <field name="model">purpose.code</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" required="1"/>
                <field name="description"/>
                <field name="company_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <record id="action_purpose_code"
            model="ir.actions.act_window">
        <field name="name">Purpose Code</field>
        <field name="res_model">purpose.code</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_purpose_code"
              name="Purpose Code"
              parent="account.menu_finance_configuration"
              action="action_purpose_code"/>
</odoo>