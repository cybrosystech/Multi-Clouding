<?xml version="1.0" encoding="UTF-8" ?>
    <odoo>
        <record id="default_purpose_code_view_form" model="ir.ui.view">
            <field name="name">Default Purpose Code View Form</field>
            <field name="model">default.purpose.code</field>
            <field name="arch" type="xml">
                <form>
                    <group>

                        <field name="purpose_code_id"/>
                        <field name="company_id"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="default_purpose_code_view_tree" model="ir.ui.view">
            <field name="name">Default Purpose Code View Tree</field>
            <field name="model">default.purpose.code</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="purpose_code_id"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>
        <record id="action_default_purpose_code"
                model="ir.actions.act_window">
            <field name="name">Default Purpose Code</field>
            <field name="res_model">default.purpose.code</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_default_purpose_code"
                  name="Default Purpose Code"
                  parent="account.menu_finance_configuration"
                  action="action_default_purpose_code"/>
    </odoo>
