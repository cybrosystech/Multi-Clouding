<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="account_payment_approval_view_form" model="ir.ui.view">
        <field name="name">account.payment.approval.form.view</field>
        <field name="model">account.payment.approval</field>
        <field name="arch" type="xml">
            <form string="Payment Approval Batch">
                <header>
                    <field name="state" widget="statusbar" nolabel="1"/>
                    <button string="Request Approval"
                            name="request_approval_button"
                            type="object" class="btn-secondary"
                            invisible="state in ['approved', 'selected','in_approval'] or request_approve_bool == True or show_request_approve_button == True"/>
                    <button name="button_approve_payment_cycle" string="Approve"
                            type="object" class="btn-primary"
                            invisible="show_approve_button == False"
                    />
                    <button name="button_reject_payment_cycle" string="Reject"
                            type="object" class="btn-primary"
                            invisible="show_approve_button == False"
                    />
                </header>
                <sheet>
                    <group>
                        <field name="batch_name" readonly="state == 'approved'"
                        />
                        <field name="from_date"
                               readonly="state == 'approved'"/>
                        <field name="to_date"
                               readonly="state == 'approved'"/>
                        <field name="company_id"
                               readonly="state == 'approved'"/>
                        <field name="bank_integration_status"
                       groups="base.group_erp_manager,base.group_system,account.group_account_manager"
                />
                        <field name="request_approve_bool" invisible="1"
                        />
                        <field name="show_request_approve_button"
                               invisible="1"/>
                        <field name="show_approve_button" invisible="1"/>
                        <button string="Generate  Payments"
                                name="action_generate_approval_batch"
                                type="object" class="btn-secondary"
                                invisible="state != 'draft'"/>

                    </group>
                    <notebook>
                        <page string="Payments">
                            <field name="payment_ids" readonly="state == 'approved'">
                                <tree>
                                    <field name="payment_id" invisible="1" column_invisible="1"/>
                                    <field name="description"/>
                                    <field name="invoice_number"
                                           style="width:25px;"/>
                                    <field name="partner_id"/>
                                    <field name="usd_currency" invisible="1"
                                           column_invisible="1"/>
                                    <field name="currency_id"/>
                                    <field name="invoice_amount"
                                           sum="Total Invoice"/>
                                    <field name="payment_amount"
                                           string="Payment Amount"
                                           sum="Total Payment"/>
                                    <field name="amount_in_usd"
                                           sum="Total Payment ($)"
                                           widget="monetary"
                                           options="{'currency_field': 'usd_currency'}"
                                    />
                                    <field name="company_id" invisible="1"/>
                                </tree>
                            </field>

                        </page>
                        <page string="Approval Cycle" name="approval_cycle">
                            <field name="payment_approval_cycle_ids"
                                   readonly="True">
                                <tree>
                                    <field name="approval_seq"/>
                                    <field name="user_approve_ids"
                                           widget="many2many_tags"/>
                                    <field name="is_approved"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"
                           groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="account_payment_approval_view_tree" model="ir.ui.view">
        <field name="name">account.payment.approval.tree.view</field>
        <field name="model">account.payment.approval</field>
        <field name="arch" type="xml">
            <tree>
                <field name="batch_name"/>
                <field name="from_date"/>
                <field name="to_date"/>
                <field name="state"/>
                <field name="company_id"/>
                <field name="bank_integration_status"
                       groups="base.group_erp_manager,base.group_system,account.group_account_manager"
                />
            </tree>
        </field>
    </record>
    <record id="action_account_payment_approval" model="ir.actions.act_window">
        <field name="name">Payment Approvals</field>
        <field name="res_model">account.payment.approval</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new payment approval batch
            </p>
        </field>
    </record>

    <menuitem
            id="menu_payment_approval"
            name="Payment Approval"
            action="action_account_payment_approval"
            parent="account.menu_finance_payables"
            sequence="8"
    />
</odoo>
