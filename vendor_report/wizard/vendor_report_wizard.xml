<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="vendor_report_wizard_form" model="ir.ui.view">
        <field name="name">report.vendor.wizard.form</field>
        <field name="model">vendor.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group col="4">
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                </group>
                <footer>
                    <button name="generate_xlsx_report" string="Excel"
                            type="object" default_focus="1"
                            class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="vendor_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Vendor report action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vendor.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="vendor_report_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>