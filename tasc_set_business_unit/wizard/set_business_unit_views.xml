<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="set_business_unit_view_form" model="ir.ui.view">
        <field name="name">set.business.unit.view.form</field>
        <field name="model">set.business.unit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="journal_ids" widget="many2many_tags"/>
                            <field name="date_from"/>
                            <field name="business_unit_id"/>
                        </group>
                        <group>
                            <field name="records"/>
                            <field name="limit"/>
                            <field name="date_to"/>
                            <field name="is_update_blank_only"/>
                        </group>
                    </group>
                    <footer>
                        <button name="set_business_unit" string="Update"
                                type="object" default_focus="1"
                                class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary"
                                special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="set_business_unit_action" model="ir.actions.act_window">
        <field name="name">Set Business Unit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">set.business.unit</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_set_business_unit"
              name="Set Business Unit"
              parent="base.menu_custom"/>
    <menuitem id="menu_set_business_unit_act"
              action="set_business_unit_action"
              parent="menu_set_business_unit"
    />

</odoo>