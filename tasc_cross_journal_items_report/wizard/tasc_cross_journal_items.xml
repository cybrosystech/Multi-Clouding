<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="tasc_cross_journal_items_view_form" model="ir.ui.view">
        <field name="name">TASC Cross Journal Items Form view</field>
        <field name="model">tasc.cross.journal.items</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <group>
                        <field name="company_id"/>
                        <field name="start_date"/>
                        <field name="account_ids" widget="many2many_tags"/>
                        <field name="analytic_account_ids"
                               widget="many2many_tags"/>
                    </group>
                    <group>
                        <field name="state"/>
                        <field name="end_date"/>
                        <field name="project_site_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="print_report_xlsx" string="PRINT"
                            type="object"
                            default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_tasc_cross_journal_items_wizard"
            model="ir.actions.act_window">
        <field name="name">TASC Cross Journal Items Report</field>
        <field name="res_model">tasc.cross.journal.items</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_tasc_cross_journal_items_report"
              name="TASC Cross Journal Items"
              parent="cash_flow_statement_report.tasc_dynamic_reports"
              action="action_tasc_cross_journal_items_wizard"/>
</odoo>
