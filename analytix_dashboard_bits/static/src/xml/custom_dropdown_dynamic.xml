<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="DynamicTag">
        <t t-foreach="elements" t-as="el" t-key="key">
            <t t-set="color" t-value="el[colorField] || 0"/>
            <t t-set="colornames"
               t-value="['No color', 'Red', 'Orange', 'Yellow', 'Light blue', 'Dark purple', 'Salmon pink', 'Medium blue', 'Dark blue', 'Fushia', 'Green', 'Purple']"/>
            <div t-attf-class="badge badge-pill #{hasDropdown ? 'dropdown' : ''} o_tag_color_#{color}"
                 t-att-data-color="color" t-att-data-index="el_index" t-att-data-id="el.id"
                 t-attf-title="Tag color: #{colornames[color]}">
                <t t-set="_badge_text">
                    <span class="o_badge_text" t-att-title="el.display_name"><span role="img" t-attf-aria-label="Tag color: #{colornames[color]}"/>
                        <span class="o_tag_badge_text" t-esc="el.display_name"/></span>
                </t>
                <t t-if="hasDropdown">
                    <a role="button" href="#" class="dropdown-toggle o-no-caret" data-toggle="dropdown"
                       aria-expanded="false">
                        <t t-out="_badge_text"/>
                    </a>
                </t>
                <t t-else="">
                    <t t-out="_badge_text"/>
                </t>
                <a t-if="!readonly" href="#" class="fa fa-times o_delete" title="Delete" aria-label="Delete"/>
            </div>
        </t>
    </t>
</templates>
