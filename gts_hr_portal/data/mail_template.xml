<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="email_template_leave_request" model="mail.template">
            <field name="name">Leave Request</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="subject">Leave Request - {{ object.employee_id.name }} : FROM {{ ctx.get('date_from','') }} TO {{ ctx.get('date_to','') }}</field>
            <field name="email_from">{{object.employee_id.sudo().user_id.sudo().email}}</field>
            <field name="email_to">
                    {{ object.employee_id.parent_id.sudo().user_id.sudo().email }}
            </field>
            <field name="email_cc">
                {{ object.employee_id.sudo().leave_manager_id.sudo().email }}
            </field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br/>
                        <br/>
                        <t t-out="object.employee_id.name or ''"></t> has request for Leave
                       (<t t-out="object.holiday_status_id.name or ''"></t>) from
                        <t t-esc="ctx.get('date_from', '')"></t> to  <t t-esc="ctx.get('date_to', '')"></t>.
                        <br/>
                        <br/>
                        <a t-attf-href="/web#id={{object.id}}&amp;model=hr.leave&amp;view_type=form"
                           style="background-color: #9E588B; margin-top: 10px; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">
                            View Request</a>
                        <br/>
                        <br/>
                        Leave Description : <t t-out="object.name or ''"></t>
                        <br/>
                        Leave Type: <t t-out="object.holiday_status_id.name or ''"></t>
                        <br/>
                        Date From:  <t t-esc="ctx.get('date_from', '')"></t>
                        <br/>
                        Date To:  <t t-esc="ctx.get('date_to', '')"></t>
                        <br/>
                        Total Number of Days: <t t-out="object.number_of_days or ''"></t>
                        <br/>
                    </p>
                </div>
            </field>
        </record>


        <record id="email_template_leave_approve_manager" model="mail.template">
            <field name="name">Leave Approve Manager</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="subject">Leave Approved - {{object.employee_id.name}} : FROM {{ object.date_from.date() }} TO {{ object.date_to.date() }}</field>
            <field name="email_from">{{ object.employee_id.parent_id.sudo().user_id.sudo().email }}</field>
            <field name="email_to">{{ object.employee_id.sudo().user_id.sudo().email }}</field>
            <field name="email_cc">{{ object.employee_id.sudo().leave_manager_id.sudo().email }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello <t t-out="object.employee_id.name or ''"></t>,
                        <br/>
                        <br/>
                        Your leave for (<t t-out="object.holiday_status_id.name or ''"></t>) from
                        <t t-out="object.date_from.date() or ''"></t> to <t t-out="object.date_to.date() or ''"></t> is approved by
                        manager <t t-out="object.employee_id.sudo().parent_id.name or ''"></t>.
                        <br/>
                        <br/>
                        <a t-attf-href="/web#id={{object.id}}&amp;model=hr.leave&amp;view_type=form"
                           style="background-color: #9E588B; margin-top: 10px; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">
                            View Request</a>
                        <br/>
                        <br/>
                        Leave Description : <t t-out="object.name or ''"></t>
                        <br/>
                        Leave Type: <t t-out="object.holiday_status_id.name or ''"></t>
                        <br/>
                        Date From: <t t-out="object.date_from.date() or ''"></t>
                        <br/>
                        Date To: <t t-out="object.date_to.date() or ''"></t>
                        <br/>
                        Total Number of Days: <t t-out="object.number_of_days or ''"></t>
                        <br/>
                    </p>
                </div>
            </field>
        </record>

        <record id="email_template_leave_approve_timeoff_approver"
                model="mail.template">
            <field name="name">Leave Approve Time off officer</field>
            <field name="model_id" ref="hr_holidays.model_hr_leave"/>
            <field name="subject">Leave Approved - {{ object.employee_id.name }} : FROM {{ object.date_from.date() }} TO {{ object.date_to.date() }}
            </field>
            <field name="email_from">{{ object.employee_id.sudo().leave_manager_id.sudo().email }}</field>
            <field name="email_to">{{ object.employee_id.sudo().user_id.sudo().email }}</field>
            <field name="email_cc">{{ object.employee_id.parent_id.sudo().user_id.sudo().email }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello <t t-out="object.employee_id.name or ''"></t>,
                        <br/>
                        <br/>
                        Your leave for (<t t-out="object.holiday_status_id.name or ''"></t>) from
                        <t t-out="object.date_from.date() or ''"></t> to <t t-out="object.date_to.date() or ''"></t> is approved by
                        time off approver
                        <t t-out="object.employee_id.sudo().leave_manager_id.name or ''"></t>.
                        <br/>
                        <br/>
                        <a t-attf-href="/web#id={{object.id}}&amp;model=hr.leave&amp;view_type=form"
                           style="background-color: #9E588B; margin-top: 10px; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">
                            View Request</a>
                        <br/>
                        <br/>
                        Leave Description : <t t-out="object.name or ''"></t>
                        <br/>
                        Leave Type: <t t-out="object.holiday_status_id.name or ''"></t>
                        <br/>
                        Date From: <t t-out="object.date_from.date() or ''"></t>
                        <br/>
                        Date To: <t t-out="object.date_to.date() or ''"></t>
                        <br/>
                        Total Number of Days: <t t-out="object.number_of_days or ''"></t>
                        <br/>
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>