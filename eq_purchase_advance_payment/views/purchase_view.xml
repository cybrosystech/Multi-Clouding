<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_view_purchase_view_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <!--            <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>-->
            <field name="arch" type="xml">
                <xpath expr="//header//button[@name='button_draft']"
                       position="before">
                    <button name="btn_advance_payment" string="Advance Payment"
                            groups="account.group_account_invoice"
                            type="object" class="btn-primary"
                            invisible="state in  ['done', 'cancel']"/>
                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_adv_payments" type="object"
                            groups="account.group_account_invoice"
                            class="oe_stat_button" icon="fa-money"
                            invisible="not adv_payment_ids">
                        <field name="adv_payment_ids" widget="statinfo"
                               string="Adv. Payments"/>
                    </button>
                </xpath>
            </field>
        </record>

        <record id="view_purchase_advance_account_payment_form"
                model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="arch" type="xml">
                <form string="Advance Payment">
                    <field name="state" invisible="1"/>
                    <sheet>
                        <!-- Invisible fields -->
                        <field name="id" invisible="1"/>
                        <field name="is_move_sent" invisible="1"/>
                        <field name="need_cancel_request" invisible="1"/>
                        <field name="show_reset_to_draft_button" invisible="1"/>
                        <field name="is_reconciled" invisible="1"/>
                        <field name="is_matched" invisible="1"/>
                        <field name="payment_method_code" invisible="1"/>
                        <field name="show_partner_bank_account" invisible="1"/>
                        <field name="require_partner_bank_account"
                               invisible="1"/>
                        <field name="available_payment_method_line_ids"
                               invisible="1"/>
                        <field name="available_partner_bank_ids" invisible="1"/>
                        <field name="suitable_journal_ids" invisible="1"/>
                        <field name="country_code" invisible="1"/>
                        <field name="partner_type" invisible="1"/>
                        <field name="posted_before" invisible="1"/>
                        <field name="reconciled_invoices_type" invisible="1"/>
                        <field name="paired_internal_transfer_payment_id"
                               invisible="1"/>
                        <field name="available_journal_ids" invisible="1"/>
                        <group name="main_group">
                            <group name="group1">
                                <field name="is_internal_transfer"
                                       readonly="state != 'draft'"
                                       invisible="1"/>
                                <field name="payment_type" invisible="1"/>
                                <field name="partner_id"
                                       context="{'default_is_company': True}"
                                       invisible="1"
                                />
                                <field name="journal_id"
                                       domain="[('id', 'in', available_journal_ids)]"
                                       readonly="state != 'draft'"/>
                                <field name="create_in_state_purchase"
                                       required="1"/>
                                <field name="ref" string="Memo" invisible="1"/>
                                <field name="purpose_code_id"/>

                            </group>
                            <group name="group2">
                                <label for="amount"/>
                                <div name="amount_div" class="o_row">
                                    <field name="amount"
                                           readonly="state != 'draft'"/>
                                    <field name="currency_id"
                                           required="1"
                                           />
                                </div>
                                <field name="company_id" readonly="1"/>
                                <field name="date"
                                       readonly="state != 'draft'"/>
                                <field name="payment_method_line_id"
                                       invisible="1"/>

                                <field name="partner_bank_id" string="Vendor Bank Account"
                                       context="{'default_partner_id': partner_id, 'display_account_trust': True}"
                                />
                                <field name="destination_journal_id"
                                       context="{'default_partner_id': partner_id}"
                                       invisible="1"
                                />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="create_purchase_adv_payment" type="object"
                                string="Create Advance Payment"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>