<odoo>

    <record id="view_account_asset_inherit" model="ir.ui.view">
        <field name="name">account.asset.inherit</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='prorata_date']" position="before">
                <field name="start_date" string="From"
                       invisible="method_period != 'day'"
                       required="method_period == 'day'"/>
                <field name="end_date" invisible="method_period != 'day'"
                       required="method_period == 'day'" string="To"
                />
            </xpath>
                        <xpath expr="//label[@for='method_number']" position="attributes">
                            <attribute name="invisible">method_period in ('day')</attribute>
                                                        <attribute name="column_invisible">method_period in ('day')</attribute>

                        </xpath>
            <xpath expr="//field[@name='method_number']" position="attributes">
                <attribute name="invisible">method_period in ('day')</attribute>
                <attribute name="column_invisible">method_period in ('day')</attribute>
            </xpath>
            <!--            <xpath expr="//label[@for='prorata_computation_type']" position="attributes">-->
            <!--                <attribute name="attrs">{'invisible': [('method_period', 'in',-->
            <!--                    ('day'))]}-->
            <!--                </attribute>-->
            <!--            </xpath>-->
            <xpath expr="//field[@name='prorata_computation_type']"
                   position="attributes">
                <attribute name="invisible">method_period in ('day')</attribute>
                <attribute name="column_invisible">method_period in ('day')</attribute>

            </xpath>
            <!--            <field name="first_depreciation_date" position="after">-->
            <!--                <field name="accounting_date"/>-->
            <!--            </field>-->
            <field name="prorata_date" position="after">
                <field name="accounting_date"/>
            </field>
        </field>
    </record>
</odoo>
