<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="payment_report_bank_integration_view_form" model="ir.ui.view">
        <field name="name">Payment Report Bank Integration View Form</field>
        <field name="model">payment.report.bank.integration</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <group>
                        <field name="date_from" required="1"/>
                        <field name="company_id" invisible="1"/>
                        <field name="journal_id"/>
                    </group>
                    <group>
                        <field name="date_to" required="1"/>
                    </group>
                </group>

                <footer>
                    <button name="print_report_xlsx" string="PRINT"
                            type="object"
                            default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_payment_report_bank_integration"
            model="ir.actions.act_window">
        <field name="name">Payment Report Bank Integration</field>
        <field name="res_model">payment.report.bank.integration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_payment_report_bank_integration"
              name="Payment Report Bank Integration"
              parent="cash_flow_statement_report.tasc_dynamic_reports"
              action="action_payment_report_bank_integration"/>
</odoo>