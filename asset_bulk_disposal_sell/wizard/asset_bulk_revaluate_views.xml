<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="asset_bulk_revaluate_view_form">
        <field name="name">asset.bulk.revaluate</field>
        <field name="model">asset.bulk.revaluate</field>
        <field name="arch" type="xml">
            <form string="Revaluate Asset">
                <sheet>
                    <group>
                        <field name="date"/>
                        <label for="method_number"/>
                        <div class="o_row">
                            <field name="method_number" required="1"/>
                            <field name="method_period" required="1" nolabel="1"/>
                        </div>
                        <field name="account_asset_counterpart_id"/>
                        <field name="company_id" invisible="1"/>
                         <button name="action_generate" string="Generate" type="object"
                            class="oe_highlight"/>
                    </group>
                    <notebook>
                   <page string="Assets to Revaluate">
                    <field name="asset_revaluate_ids">
                    <tree editable="bottom">
                        <field name="date"/>
                        <field name="company_id"/>
                        <field name="method_number"/>
                        <field name="method_period"/>
                        <field name="value_residual"/>
                        <field name="salvage_value"/>
                        <field name="account_asset_id"/>
                        <field name="account_asset_counterpart_id"/>
                        <field name="account_depreciation_id"/>
                        <field name="account_depreciation_expense_id"/>
                        <field name="asset_bulk_revaluate_id" invisible="1" column_invisible="1"/>
                    </tree>
                                            </field>

                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_apply" string="Apply" type="object"
                            class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="oe_link"/>
                </footer>

            </form>
        </field>
    </record>

    </data>
</odoo>