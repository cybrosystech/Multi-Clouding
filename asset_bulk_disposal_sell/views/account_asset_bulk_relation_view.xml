<odoo>
    <record model="ir.ui.view" id="asset_sell_bulk_tree_view">
        <field name="name">wizard.asset.sell.bulk.list</field>
        <field name="model">asset.sell.disposal.lines</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="gain_or_loss" invisible="True" column_invisible="True"/>
                <field name="company_id" invisible="True" column_invisible="True"/>
                <field name="asset_id"/>
                <field name="action"/>
                <field name="partial_bool" invisible="1"/>
                <field name="partial_amount"  invisible="1"/>
                <field name="invoice_id" options="{'no_create': True}" required="action == 'sell'"/>
                <field name="invoice_line_id" options="{'no_create': True}"
                invisible="select_invoice_line_id == False" required="select_invoice_line_id == True"/>
                <field name="select_invoice_line_id" invisible="True" column_invisible="True"/>
                <field name="gain_account_id"
                invisible="gain_or_loss != 'gain'" required="gain_or_loss == 'gain'"/>
                <field name="loss_account_id"
                invisible="gain_or_loss != 'loss'" required="gain_or_loss == 'loss'"/>
                <field name="from_leasee_contract" invisible="True" column_invisible="True"/>
                <field name="contract_end_date"
                required="from_leasee_contract == True"/>
                <field name="asset_bulk_wizard_id" invisible="True" column_invisible="True"/>
            </tree>
        </field>
    </record>

</odoo>