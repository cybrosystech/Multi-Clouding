<odoo>
    <record model="ir.ui.view" id="asset_sell_bulk_form">
        <field name="name">wizard.asset.sell.bulk</field>
        <field name="model">asset.bulk.wizard</field>
        <field name="arch" type="xml">
            <form string="Sell Asset">
                <sheet>
                    <group>
                        <group>
                            <field name="gain_account_id"/>
                            <field name="contract_end_date"/>
                        </group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="loss_account_id"/>
                        </group>
                    </group>
                     <button name="action_generate" string="Generate" type="object"
                            class="oe_highlight"/>
                <notebook>
                    <page string="Assets to Dispose">
                        <field name="asset_sell_disposal_ids">
                            <tree editable="bottom">
                                <field name="gain_or_loss" invisible="1" column_invisible="1"/>
                                <field name="company_id" invisible="1" column_invisible="1"/>
                                <field name="asset_id"/>
                                <field name="action"/>
                                <field name="partial_bool"
                                       invisible="1" column_invisible="1"/>
                                <field name="partial_amount"
                                       invisible="1" column_invisible="1"/>
                                <field name="invoice_id" options="{'no_create': True}"
                                       required="action == 'sell'" column_invisible="1"/>
                                <field name="invoice_line_id"
                                       options="{'no_create': True}"
                                       invisible="1" column_invisible="1"
                                       required="select_invoice_line_id == True"/>
                                <field name="select_invoice_line_id" invisible="1" column_invisible="1"/>
                                <field name="gain_account_id"
                                       required="gain_or_loss == 'gain'"/>
                                <field name="loss_account_id"
                                       required="gain_or_loss == 'loss'"/>
                                <field name="from_leasee_contract" invisible="1" column_invisible="1"/>
                                <field name="contract_end_date"
                                       required="from_leasee_contract == True"/>
                                <field name="asset_bulk_wizard_id" invisible="1" column_invisible="1"/>
                            </tree>
                        </field>

                    </page>

                </notebook>
                </sheet>

                <footer>
                    <button name="action_apply" string="Apply" type="object"
                            class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="oe_link"/>
                </footer>

            </form>
        </field>
    </record>
</odoo>