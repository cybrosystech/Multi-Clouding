<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_form" model="ir.ui.view">
        <field name="name">account.account.form.inherit.account_custom</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="code_num" invisible="1"/>
                <field name="account_category"/>
            </field>
        </field>
    </record>
     <record id="view_account_list" model="ir.ui.view">
        <field name="name">account.account.list.inherit.account_custom</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_list"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="account_category" optional="hide"/>
                <field name="report_category" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="view_move_line_form" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit.account_custom</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <field name="account_id" position="after">
                <field name="code" invisible="1"/>
            </field>
        </field>
    </record>

    <record id="view_account_move_line_filter" model="ir.ui.view">
        <field name="name">account.move.line.filter.account_custom</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter" position="before">
                <field name="code"/>
            </xpath>
        </field>
    </record>

</odoo>