<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_form_view_account_custom" model="ir.ui.view">
        <field name="name">product.template.form.inherit.account.custom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='invoicing']/group/group[1]"
                   position="inside">
                <field name="company_ids" widget="many2many_tags"/>
                <field name="asset_account_id"
                       groups="account.group_account_readonly"/>
                <field name="cip_account_id"
                       groups="account.group_account_readonly"/>
            </xpath>
            <xpath expr="//page[@name='invoicing']/group/group[2]"
                   position="inside">
                <field name="inventory_account_id"
                       groups="account.group_account_readonly"/>
            </xpath>
            <xpath expr="//page[@name='general_information']/group/group[@name='group_standard_price']/field[@name='company_id']"
                   position="after">
                <field name="company_ids" groups="base.group_multi_company"
                       options="{'no_create': True}" widget="many2many_tags"/>
            </xpath>

        </field>
    </record>

    <record id="product_template_view_tree_account_custom" model="ir.ui.view">
        <field name="name">product.template.tree.inherit.account.custom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree"
                   position="inside">
                <field name="company_id" optional="hide"/>
                <field name="company_ids" widget="many2many_tags"
                       optional="hide"/>
            </xpath>
        </field>
    </record>
</odoo>