<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.account_custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']" position="attributes">
              <attribute name="string">Invoice No./Pay Ref</attribute>
            </xpath>
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="project_site_id"  optional="hide" />
                <field name="analytic_account_id"  optional="hide"/>
                <field name="reference" optional="hide"/>
            </xpath>
        </field>
    </record>
    	 <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form.inherit.account_custom</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
			<xpath expr="//field[@name='payment_reference']" position="replace">
                <field name="payment_reference"
                       invisible="move_type not in ('out_invoice', 'out_refund', 'out_receipt')"
                       readonly="inalterable_hash != False"/>
			</xpath>
            <xpath expr="//field[@name='payment_reference']" position="after">
                <field name="payment_reference" string="Vendor Inv No"
                       invisible="move_type not in ('in_invoice', 'in_refund', 'in_receipt')"
                       readonly="inalterable_hash != False"/>
			</xpath>
        </field>
    </record>

</odoo>