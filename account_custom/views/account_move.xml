<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit account.move Tree View to Modify it -->

    <record id="view_in_invoice_tree" model="ir.ui.view">
        <field name="name">view_in_invoice_tree_project_site</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="project_site_id" string="Project Site"/>
            </field>
        </field>
    </record>

    <record id="view_move_form" model="ir.ui.view">
        <field name="name">view_move_form_add_project_site</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group[@id='header_right_group']/div[@name='journal_div']"
                   position="inside">
                <field name="project_site_id" invisible="1"
                       string="Project Site"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_filter_project_site" model="ir.ui.view">
        <field name="name">view_account_invoice_filter.project_site</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="project_site_id" string="Project Site"/>
            </xpath>
        </field>
    </record>
</odoo>