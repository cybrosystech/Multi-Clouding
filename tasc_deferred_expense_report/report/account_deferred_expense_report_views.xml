<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <data>
            <template id="main_template_deferred_expense_report"
                      inherit_id="account_reports.main_template" primary="True">
                <xpath expr="//div[hasclass('o_account_reports_page')]"
                       position="attributes">
                    <attribute name="class">o_account_reports_page o_account_reports_no_print o_account_assets_report</attribute>
                </xpath>
            </template>

            <template id="line_caret_options"
                      inherit_id="account_reports.line_caret_options">
                <xpath expr="//li[last()]" position="after">
                    <li t-if="line['caret_options'] == 'account.deferred.expense.report'">
                        <a role="menuitem" tabindex="-1"
                           t-att-data-id="line['id']" action="open_asset"
                           class="dropdown-item">Open Asset
                        </a>
                    </li>
                </xpath>
            </template>

            <record id="action_account_report_deferred_expense"
                    model="ir.actions.client">
                <field name="name">Tasc Deferred Expense Report</field>
                <field name="tag">account_report</field>
                <field name="context" eval="{'model': 'account.deferred.expense.report'}"/>
            </record>

            <menuitem id="menu_action_account_report_assets"
                      name="Tasc Deferred Expense"
                      action="action_account_report_deferred_expense"
                      parent="cash_flow_statement_report.tasc_dynamic_reports"/>
        </data>
</odoo>