    <data>
        <record id="hr_payslip_rule_hr_payslip_group_user_portal" model="ir.rule">
            <field name="name">Payslip Personal Access</field>
            <field ref="hr_payroll.model_hr_payslip" name="model_id"/>
            <field name="domain_force">[('employee_id.address_home_id','=',user.partner_id.id)]</field>
            <field name="groups"
                   eval="[(4, ref('base.group_portal')),(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
