<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="budget_analysis_summary_view_form" model="ir.ui.view">
        <field name="name">Tasc Budget Analysis Summary Report wizard view</field>
        <field name="model">budget.analysis.summary</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <group>
                        <field name="company_id" readonly="1"/>
                        <field name="end_date"/>
                    </group>
                    <group>
                        <field name="start_date"/>
                    </group>
                </group>
                <footer>
                    <button name="print_report_xlsx" string="PRINT"
                            type="object"
                            default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_budget_analysis_summary"
            model="ir.actions.act_window">
        <field name="name">TASC Budget Analysis Summary Report</field>
        <field name="res_model">budget.analysis.summary</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_budget_analysis_summary"
              name="TASC Budget Analysis Summary"
              parent="cash_flow_statement_report.tasc_dynamic_reports"
              action="action_budget_analysis_summary"/>
</odoo>
