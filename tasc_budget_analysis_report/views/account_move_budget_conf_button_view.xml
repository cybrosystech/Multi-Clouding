<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="budget_conf_account_move_view_form" model="ir.ui.view">
        <field name="name">budget.conf.account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <button name="action_post" position="after">
                <button name="configure_budget_line" string="Calculate Budget" type="object"
                            class="btn-primary" states="draft"/>
            </button>
            <xpath expr="//notebook" position="inside">
                <page string="Out Budget Amounts" name="budget_amounts">
                    <div>
                        <field name="budget_collect_copy_ids" readonly="True">
                            <tree editable="bottom">
                                <field name="budget_id" string="Budget"/>
                                <field name="budget_line_id" string="Budget Line"/>
                                <field name="remaining_amount_copy" readonly="1" string="Remaining Amount"/>
                                <field name="demand_amount_copy" string="Demand Amount"/>
                                <field name="difference_amount_copy" string="Difference Amount"/>
                            </tree>
                        </field>
                    </div>
                </page>
            </xpath>
        </field>
    </record>
</odoo>