<odoo>
    <record id="account_move_view_reset_button_new" model="ir.ui.view">
        <field name="name">account.view.reset.button.new</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="is_reset_to_draft_show" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='button_draft']" position="replace">
                <button name="button_draft" string="Reset to Draft" type="object"
                invisible="is_reset_to_draft_show == False "/>
            </xpath>

        </field>
    </record>
</odoo>