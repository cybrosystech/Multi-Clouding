<odoo>

    <record id="account_asset_sub_model_inherit_view" model="ir.ui.view">
        <field name="name">account.assets.sub.model.inherit.form</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <field name="acquisition_date" position="after">
                    <field name="asset_sub_model_id" attrs="{'invisible': [('state', '=', 'model')]}"/>
            </field>
            <field name="book_value" position="after">
                <field name="value_residual_original" string="Depreciable value original"/>
            </field>
        </field>
    </record>

</odoo>