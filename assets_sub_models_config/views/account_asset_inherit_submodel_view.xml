<odoo>

    <record id="account_asset_sub_model_inherit_view" model="ir.ui.view">
        <field name="name">account.assets.sub.model.inherit.form</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <field name="acquisition_date" position="after">
                <field name="asset_sub_models_ids" widget="many2many_tags" invisible="1"/>
                <field name="asset_sub_model_id"
                       invisible="state == 'model'"/>
            </field>
            <xpath expr="//sheet/notebook[1]/page[@name='main_page']/group[1]/group[2]/span"
                   position="after">
                <field name="value_residual_original"
                       string="Depreciable value original"/>
            </xpath>
            <xpath expr="//sheet/notebook[1]/page[@name='main_page']/group[1]/group[3]/div[hasclass('o_row')]"
                   position="replace">
                <div class="o_row">
                    <field name="method_number" required="1" readonly="state not in [ 'model']" class="oe_inline"/>
                    <field name="method_period" required="1" readonly="state not in ['model']" nolabel="1"/>
                </div>
            </xpath>
            <xpath expr="//sheet/notebook[1]/page[@name='main_page']/group[1]/group[1]/field[@name='model_id']"
                   position="attributes">
                <attribute name="required">state != 'model'</attribute>
            </xpath>
            <xpath expr="//sheet/notebook[1]/page[@name='main_page']/group[1]/group[3]/field[@name='prorata_date']"
                   position="replace">
                <field name="prorata_date" invisible="prorata_computation_type == 'none'" readonly="state != 'draft'"
                       required="state != 'model'"/>
            </xpath>

        </field>
    </record>
</odoo>