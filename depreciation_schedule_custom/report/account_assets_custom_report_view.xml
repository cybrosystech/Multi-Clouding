<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="main_template_asset_report_page" inherit_id="account_reports.main_template">
            <xpath expr="//div[hasclass('o_account_reports_page')]" position="inside">
                <div style="display: flex; justify-content: center;" t-if="options['depreciation_custom'] == 1">
                    <t t-if="options['print_dep'] == 0">
                        <button action="action_next_assets" class="btn-primary oe_highlight" style="width: 65px;">Next</button>
                    </t>
                </div>
            </xpath>
        </template>

        <record id="action_account_report_assets_custom" model="ir.actions.client">
            <field name="name">Depreciation Schedule Custom</field>
            <field name="tag">account_report</field>
            <field name="context" eval="{'model': 'account.assets.custom.report',
                                         'assets_limit': '200', 'assets_offset': '0'}" />
        </record>

        <menuitem id="menu_action_account_report_assets_custom" name="Depreciation Schedule Custom"
                  action="action_account_report_assets_custom"
                  parent="account.account_reports_management_menu"/>
    </data>
</odoo>