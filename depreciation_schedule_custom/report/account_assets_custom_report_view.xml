<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="assets_report_depreciation_schedule" model="account.report">
            <field name="name">Tasc Depreciation Schedule</field>
            <field name="filter_hierarchy">optional</field>
            <field name="filter_unfold_all" eval="True"/>
            <field name="filter_period_comparison" eval="False"/>
            <field name="custom_handler_model_id"
                   ref="model_account_asset_report_depreciation_schedule_handler"/>
            <field name="load_more_limit" eval="80"/>
            <field name="column_ids">
                <record id="depreciation_schedule_asset_model"
                        model="account.report.column">
                    <field name="name">Asset Model</field>
                    <field name="expression_label">asset_model</field>
                    <field name="figure_type">string</field>
                </record>
                <record id="depreciation_schedule_acquisition_date"
                        model="account.report.column">
                    <field name="name">Acquisition Date</field>
                    <field name="expression_label">acquisition_date</field>
                    <field name="figure_type">date</field>
                </record>
                <record id="depreciation_schedule_project_site"
                        model="account.report.column">
                    <field name="name">Project/Site</field>
                    <field name="expression_label">project_site</field>
                    <field name="figure_type">string</field>
                </record>
                <record id="depreciation_schedule_co_location"
                        model="account.report.column">
                    <field name="name"> Co Location</field>
                    <field name="expression_label">co_location</field>
                    <field name="figure_type">string</field>
                </record>
                <record id="depreciation_schedule_capex_type"
                        model="account.report.column">
                    <field name="name">Capex Type</field>
                    <field name="expression_label">capex_type</field>
                    <field name="figure_type">string</field>
                </record>
                <record id="depreciation_schedule_asset_sequence_number"
                        model="account.report.column">
                    <field name="name">Asset Sequence Number</field>
                    <field name="expression_label">asset_sequence_number</field>
                    <field name="figure_type">string</field>
                </record>
                <record id="depreciation_schedule_asset_serial_number"
                        model="account.report.column">
                    <field name="name">Serial Number</field>
                    <field name="expression_label">serial_no</field>
                    <field name="figure_type">string</field>
                </record>
                <record id="depreciation_schedule_first_depreciation"
                        model="account.report.column">
                    <field name="name">First Depreciation</field>
                    <field name="expression_label">first_depreciation</field>
                    <field name="figure_type">date</field>
                </record>
                <record id="depreciation_schedule_first_method"
                        model="account.report.column">
                    <field name="name">Method</field>
                    <field name="expression_label">method</field>
                    <field name="figure_type">string</field>
                </record>
                <record id="depreciation_schedule_duration_rate"
                        model="account.report.column">
                    <field name="name">Duration / Rate</field>
                    <field name="expression_label">duration_rate</field>
                    <field name="figure_type">string</field>
                </record>
                <record id="depreciation_schedule_date_from"
                        model="account.report.column">
                    <field name="name">date from</field>
                    <field name="expression_label">assets_date_from</field>
                </record>
                <record id="depreciation_schedule_assets_plus"
                        model="account.report.column">
                    <field name="name">+</field>
                    <field name="expression_label">assets_plus</field>
                </record>
                <record id="depreciation_schedule_assets_minus"
                        model="account.report.column">
                    <field name="name">-</field>
                    <field name="expression_label">assets_minus</field>
                </record>
                <record id="depreciation_schedule_assets_date_to"
                        model="account.report.column">
                    <field name="name">date to</field>
                    <field name="expression_label">assets_date_to</field>
                </record>
                <record id="depreciation_schedule_depre_date_from"
                        model="account.report.column">
                    <field name="name">date from</field>
                    <field name="expression_label">depre_date_from</field>
                </record>
                <record id="depreciation_schedule_depre_plus"
                        model="account.report.column">
                    <field name="name">+</field>
                    <field name="expression_label">depre_plus</field>
                </record>
                <record id="depreciation_schedule_depre_minus"
                        model="account.report.column">
                    <field name="name">-</field>
                    <field name="expression_label">depre_minus</field>
                </record>
                <record id="depreciation_schedule_depre_date_to"
                        model="account.report.column">
                    <field name="name">date to</field>
                    <field name="expression_label">depre_date_to</field>
                </record>
                <record id="depreciation_schedule_balance"
                        model="account.report.column">
                    <field name="name">book_value</field>
                    <field name="expression_label">balance</field>
                </record>
            </field>
        </record>


        <record id="action_account_report_assets_custom"
                model="ir.actions.client">
            <field name="name">Tasc Depreciation Schedule</field>
            <field name="tag">account_report</field>
            <field name="context"
                   eval="{'report_id': ref('depreciation_schedule_custom.assets_report_depreciation_schedule')}"/>
        </record>
        <menuitem id="menu_action_account_report_assets_custom"
                  name="TASC  Depreciation Schedule"
                  action="action_account_report_assets_custom"
                  parent="cash_flow_statement_report.tasc_dynamic_reports"/>
    </data>
</odoo>